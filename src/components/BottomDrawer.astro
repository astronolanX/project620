<style>
  .bottom-drawer-container {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    pointer-events: none;
  }
  
  
  .drawer-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100vh;
    background: rgba(15, 15, 15, 0.98);
    backdrop-filter: blur(20px);
    padding: 2rem;
    box-sizing: border-box;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    pointer-events: auto;
    overflow-y: auto;
    color: white;
    display: flex;
    flex-direction: column;
  }
  
  .drawer-content.open {
    transform: translateY(0);
  }
  
  .drawer-close-btn {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: white;
    z-index: 10;
  }
  
  .drawer-close-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(2px);
  }
  
  .drawer-close-btn svg {
    width: 24px;
    height: 24px;
    color: white;
  }
  
  .drawer-nav {
    max-width: 720px;
    margin: 0 auto;
    padding-top: 3rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .availability-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(34, 197, 94, 0.2);
    border: 1px solid rgba(34, 197, 94, 0.4);
    border-radius: 0;
    font-size: 0.85rem;
    font-weight: 500;
    color: #22c55e;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    width: fit-content;
  }
  
  .status-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
  
  .drawer-nav h2 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    color: #ffffff;
  }
  
  .bio {
    font-size: clamp(0.95rem, 2.5vw, 1.1rem);
    font-weight: 400;
    line-height: 1.5;
    color: #e0e0e0;
    margin-bottom: 1.5rem;
  }
  
  .cv-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 0;
    color: #e0e0e0;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    margin-bottom: 2rem;
    width: fit-content;
  }
  
  .cv-button:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    color: #ffffff;
    transform: translateX(4px);
  }
  
  .cv-icon {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }
  
  .cv-button:hover .cv-icon {
    transform: translateX(2px);
  }
  
  .nav-links {
    list-style: none;
    margin: 0;
    padding: 0;
    margin-bottom: 3rem;
  }
  
  .nav-links li {
    margin-bottom: 1rem;
  }
  
  .nav-links a {
    display: block;
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    font-weight: 600;
    color: #e0e0e0;
    text-decoration: none;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }
  
  .nav-links a:hover {
    color: #ffffff;
    border-bottom-color: #ffffff;
    transform: translateX(8px);
  }
  
  .contact-info h3 {
    font-size: clamp(1.2rem, 3vw, 1.6rem);
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #ffffff;
  }
  
  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0;
    background: transparent;
    border: none;
    text-decoration: none;
    color: #e0e0e0;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .contact-link:hover {
    color: #ffffff;
    transform: translateX(4px);
  }
  
  .contact-arrow {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }
  
  .contact-link:hover .contact-arrow {
    transform: translate(2px, -2px);
  }
  
  .contact-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 24px;
    right: 0;
    height: 1px;
    background: rgba(255, 255, 255, 0.3);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }
  
  .contact-link:hover::after {
    transform: scaleX(1);
  }
  
  .drawer-footer {
    margin-top: auto;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: left;
  }
  
  .drawer-footer p {
    color: #888;
    font-size: 0.9rem;
    font-weight: 400;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .drawer-content {
      padding: 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .drawer-content {
      padding: 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const drawerTrigger = document.getElementById('drawer-trigger');
    const drawerContent = document.getElementById('drawer-content');
    const drawerCloseBtn = document.getElementById('drawer-close-btn');
    let isOpen = false;
    
    function toggleDrawer() {
      isOpen = !isOpen;
      if (drawerContent) {
        if (isOpen) {
          drawerContent.classList.add('open');
        } else {
          drawerContent.classList.remove('open');
        }
      }
    }
    
    function closeDrawer() {
      isOpen = false;
      if (drawerContent) {
        drawerContent.classList.remove('open');
      }
    }
    
    if (drawerTrigger) {
      drawerTrigger.addEventListener('click', toggleDrawer);
    }
    
    // Close drawer when clicking close button
    if (drawerCloseBtn) {
      drawerCloseBtn.addEventListener('click', closeDrawer);
    }
    
    
    // Close drawer on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && isOpen) {
        closeDrawer();
      }
    });
    
    // Touch gesture support for mobile
    if (drawerContent) {
      let startY = 0;
      let currentY = 0;
      let isDragging = false;
      
      drawerContent.addEventListener('touchstart', function(e) {
        startY = e.touches[0].clientY;
        isDragging = true;
      }, { passive: true });
      
      drawerContent.addEventListener('touchmove', function(e) {
        if (!isDragging || !drawerContent) return;
        currentY = e.touches[0].clientY;
        const deltaY = currentY - startY;
        
        // Only allow downward swipes when drawer is open
        if (isOpen && deltaY > 0) {
          const translateY = Math.min(deltaY, window.innerHeight);
          drawerContent.style.transform = `translateY(${translateY}px)`;
        }
      }, { passive: true });
      
      drawerContent.addEventListener('touchend', function(_e) {
        if (!isDragging || !drawerContent) return;
        isDragging = false;
        
        const deltaY = currentY - startY;
        
        // Close drawer if swiped down more than 100px
        if (isOpen && deltaY > 100) {
          closeDrawer();
        }
        
        // Reset transform
        drawerContent.style.transform = '';
      }, { passive: true });
    }
    
    // Set current year
    const currentYear = document.getElementById('current-year');
    if (currentYear) {
      currentYear.textContent = new Date().getFullYear().toString();
    }
    
    // Handle obfuscated email links
    const emailLinks = document.querySelectorAll('[data-email]');
    emailLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const email = this.getAttribute('data-email');
        const subject = this.getAttribute('data-subject') || '';
        const mailtoUrl = `mailto:${email}${subject ? '?subject=' + encodeURIComponent(subject) : ''}`;
        window.location.href = mailtoUrl;
      });
    });
  });
</script>