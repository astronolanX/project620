</footer>

<style>
  .footer-section {
    position: fixed;
    top: 0;
    left: 88px;
    right: 0;
    bottom: 0;
    width: calc(100% - 88px);
    height: 100vh;
    height: 100dvh;
    background: #e6e6e6;
    color: #000;
    border-radius: 0;
    overflow: auto;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: 999;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
  }

  .footer-section.visible {
    transform: translateY(0);
  }

  .footer-close-btn {
    position: absolute;
    top: 2rem;
    right: 2rem;
    min-width: 60px;
    height: 40px;
    background: rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 0 12px;
    color: #666;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .footer-close-btn:hover {
    background: rgba(0, 0, 0, 0.1);
    border-color: rgba(0, 0, 0, 0.2);
    color: #333;
  }

  .close-text {
    font-family: 'Roboto Mono', monospace;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.5px;
    opacity: 0.8;
  }

  .exit-icon {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .footer-close-btn:hover .exit-icon {
    transform: translateY(2px);
  }

  .footer-content {
    width: 100%;
    padding: 4rem 3rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .footer-header {
    margin-bottom: 3rem;
  }

  .footer-title {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .section-number {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 4rem;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.1);
    line-height: 1;
  }

  .footer-title h2 {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 3rem;
    font-weight: 900;
    color: #000;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .geometric-accent {
    font-family: 'Roboto Mono', monospace;
    font-size: 3rem;
    font-weight: 900;
    color: #c6ff00;
    line-height: 1;
    margin-left: auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    grid-auto-rows: minmax(250px, auto);
  }

  .footer-card {
    position: relative;
    background: #ffffff;
    border: 2px solid #000;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
  }

  .footer-card:hover {
    transform: translateY(-4px);
  }

  /* Card Variants */
  .card-variant-1 {
    background: #ffffff;
  }

  .card-variant-2 {
    background: #c6ff00;
  }

  .card-variant-3 {
    background: #000;
    color: #ffffff;
  }

  .card-variant-4 {
    background: #e6e6e6;
  }

  .card-variant-3 .card-title,
  .card-variant-3 .card-description,
  .card-variant-3 .contact-button,
  .card-variant-3 .social-label {
    color: #ffffff;
  }

  .card-variant-2 .card-title,
  .card-variant-2 .card-description,
  .card-variant-2 .card-cta {
    color: #000;
  }

  .card-number {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 2.5rem;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.1);
    line-height: 1;
    z-index: 1;
  }

  .card-variant-3 .card-number {
    color: rgba(255, 255, 255, 0.1);
  }

  .card-variant-2 .card-number {
    color: rgba(0, 0, 0, 0.2);
  }

  .card-pattern {
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    opacity: 0.1;
    z-index: 1;
  }

  /* Pattern Variants */
  .card-variant-1 .card-pattern {
    background: 
      linear-gradient(45deg, #000 25%, transparent 25%), 
      linear-gradient(-45deg, #000 25%, transparent 25%), 
      linear-gradient(45deg, transparent 75%, #000 75%), 
      linear-gradient(-45deg, transparent 75%, #000 75%);
    background-size: 15px 15px;
    background-position: 0 0, 0 7.5px, 7.5px -7.5px, -7.5px 0px;
  }

  .card-variant-2 .card-pattern {
    background: 
      repeating-linear-gradient(
        45deg,
        #000,
        #000 2px,
        transparent 2px,
        transparent 10px
      );
  }

  .card-variant-3 .card-pattern {
    background: 
      radial-gradient(circle at 50% 50%, #c6ff00 2px, transparent 2px);
    background-size: 12px 12px;
  }

  .card-variant-4 .card-pattern {
    background: 
      linear-gradient(90deg, #000 50%, transparent 50%),
      linear-gradient(#000 50%, transparent 50%);
    background-size: 8px 8px;
  }

  .card-content {
    padding: 3rem 2rem 2rem;
    flex: 1;
    position: relative;
    z-index: 2;
  }

  .card-title {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #000;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .hero-card .card-title {
    font-size: 2rem;
  }

  .card-subtitle {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.8rem;
    font-weight: 600;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 1.5rem 0;
  }

  .card-description {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    line-height: 1.5;
    color: #000;
    margin: 0 0 1.5rem 0;
  }

  .card-cta {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    color: #000;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: -0.01em;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .card-cta:hover {
    transform: translateX(4px);
  }

  .contact-button {
    font-family: 'Roboto Mono', monospace;
    font-size: 1rem;
    font-weight: 600;
    color: #000;
    text-decoration: none;
    background: rgba(0, 0, 0, 0.05);
    padding: 0.8rem 1.2rem;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 4px;
    display: inline-block;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }

  .contact-button:hover {
    background: rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .card-variant-3 .contact-button {
    background: rgba(198, 255, 0, 0.1);
    border-color: #c6ff00;
    color: #c6ff00;
  }

  .card-variant-3 .contact-button:hover {
    background: rgba(198, 255, 0, 0.2);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-links a {
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-label {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.75rem;
    font-weight: 600;
    color: #000;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 0.5rem 1rem;
    border: 1px solid rgba(0, 0, 0, 0.2);
    background: rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .social-links a:hover .social-label {
    background: rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .card-variant-3 .social-label {
    color: #c6ff00;
    border-color: #c6ff00;
    background: rgba(198, 255, 0, 0.1);
  }

  .card-variant-3 .social-links a:hover .social-label {
    background: rgba(198, 255, 0, 0.2);
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .nav-link {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: #000;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: -0.01em;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
  }

  .nav-link:hover {
    color: #666;
    transform: translateX(4px);
  }

  .status-badges {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .status-badge {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 0.6rem 1rem;
    border: 1px solid #000;
    background: rgba(0, 0, 0, 0.05);
    color: #000;
    width: fit-content;
  }

  .status-badge.available {
    border-color: #c6ff00;
    background: rgba(198, 255, 0, 0.1);
    color: #000;
  }

  .copyright-text {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.8rem;
    font-weight: 500;
    color: #666;
    margin: 0;
  }

  .card-decoration {
    position: absolute;
    bottom: 1.5rem;
    right: 1.5rem;
    width: 30px;
    height: 30px;
    border: 2px solid #000;
    z-index: 1;
  }

  .card-variant-3 .card-decoration {
    border-color: #c6ff00;
  }

  .card-variant-2 .card-decoration {
    background: #000;
  }

  /* Featured cards */
  .hero-card {
    grid-column: span 2;
    grid-row: span 2;
  }

  .cta-card {
    grid-column: span 2;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .footer-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }
    
    .hero-card {
      grid-column: span 1;
      grid-row: span 1;
    }
    
    .cta-card {
      grid-column: span 1;
    }
  }

  @media (max-width: 768px) {
    .footer-section {
      left: 72px;
      width: calc(100% - 72px);
    }

    .footer-content {
      padding: 3rem 1.5rem 2rem;
      margin-left: 0;
      width: 100%;
    }

    .footer-close-btn {
      top: 1rem;
      right: 1rem;
      min-width: 50px;
      height: 32px;
      padding: 0 8px;
    }
    
    .close-text {
      font-size: 10px;
    }

    .exit-icon {
      width: 14px;
      height: 14px;
    }

    .section-number {
      font-size: 3rem;
    }

    .footer-title h2 {
      font-size: 2rem;
    }

    .geometric-accent {
      font-size: 2rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .hero-card,
    .cta-card {
      grid-column: span 1;
      grid-row: span 1;
    }

    .card-content {
      padding: 2.5rem 1.5rem 1.5rem;
    }

    .card-number {
      font-size: 2rem;
      top: 1rem;
      left: 1rem;
    }

    .card-title {
      font-size: 1.25rem;
    }

    .hero-card .card-title {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 480px) {
    .footer-content {
      padding: 2rem 1rem;
      margin-left: 0;
      width: 100%;
    }

    .footer-title {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .geometric-accent {
      margin-left: 0;
    }

    .card-content {
      padding: 2rem 1rem 1rem;
    }

    .status-badges {
      flex-direction: column;
    }

    .social-links {
      flex-direction: column;
    }
  }
</style>

<script>
  // Update on each page load (SPA compatible)
  document.addEventListener('astro:page-load', function() {
    const currentYear = document.getElementById('current-year');
    if (currentYear) {
      currentYear.textContent = new Date().getFullYear().toString();
    }
    
    // Close button functionality
    const closeBtn = document.getElementById('footerCloseBtn');
    if (closeBtn) {
      closeBtn.addEventListener('click', () => {
        // Dispatch event to close footer from LeftNav
        document.dispatchEvent(new CustomEvent('footer-close'));
      });
    }
  });
</script>