    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background: #C4F82A;
    color: #000;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    border: none;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .cv-button:hover {
    background: #B4E81A;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(196, 248, 42, 0.3);
  }
  
  
