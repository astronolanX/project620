    color: #fff;
    text-transform: uppercase;
  }
  
  .label-line:first-child {
    opacity: 0.7;
    margin-bottom: 0.1rem;
  }
  
  .name {
    font-weight: 600;
    font-size: clamp(1rem, 1.5vw, 1.2rem);
  }
  
  .availability-banner {
    width: 100%;
    background: #C4F82A;
    color: #000;
    padding: 1rem 2rem;
    font-family: 'Evolve Sans', sans-serif;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .availability-banner:hover {
    background: #B4E81A;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(196, 248, 42, 0.3);
  }
  
  .availability-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    position: relative;
    z-index: 2;
  }
  
  .status-indicator {
    width: 8px;
    height: 8px;
    background: #000;
    animation: pulse 2s infinite;
  }
  
  .availability-text {
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .availability-cta {
    font-size: 0.85rem;
    font-weight: 600;
    opacity: 0.8;
    transition: all 0.3s ease;
  }
  
  .availability-banner:hover .availability-cta {
    opacity: 1;
    transform: translateX(2px);
  }
  
  @keyframes pulse {
    0% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
    100% { opacity: 1; transform: scale(1); }
  }
  
  @keyframes highlightPulse {
    0% { transform: scale(1); }
    25% { transform: scale(1.02); }
    50% { 
      transform: scale(1.02);
      background: rgba(255, 158, 0, 0.1);
    }
    100% { 
      transform: scale(1);
      background: transparent;
    }
  }
  
  .bio {
    font-size: clamp(0.95rem, 2.5vw, 1.1rem);
    font-weight: 400;
    line-height: 1.6;
    color: #e0e0e0;
    margin-bottom: 1rem;
    max-width: 500px;
  }
  
