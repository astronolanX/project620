<style>
  .footer-section {
    background: var(--text-black);
    color: var(--bg-white);
    margin-top: 4rem;
    border-radius: var(--border-radius) var(--border-radius) 0 0;
    overflow: hidden;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem 1.5rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: auto 1fr auto auto;
    gap: 3rem;
    align-items: start;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-logo {
    width: 48px;
    height: 48px;
    background: var(--accent-lime);
    color: var(--text-black);
    border-radius: var(--border-radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'JetBrains Mono', monospace;
    font-weight: 900;
    font-size: 1.25rem;
  }

  .footer-info h3 {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 0.25rem;
  }

  .footer-info p {
    margin: 0 0 0.75rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
  }

  .footer-bio {
    max-width: 400px;
    line-height: 1.6;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s;
    font-size: 0.95rem;
  }

  .footer-link:hover {
    color: var(--accent-lime);
    transform: translateX(4px);
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }

  .contact-button {
    background: var(--accent-lime);
    color: var(--text-black);
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius-sm);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
    display: inline-flex;
    align-items: center;
  }

  .contact-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(236, 249, 90, 0.3);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s;
  }

  .social-links a:hover {
    background: var(--accent-lime);
    color: var(--text-black);
    transform: translateY(-2px);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
  }

  .copyright {
    margin: 0;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
  }

  .footer-badges {
    display: flex;
    gap: 1rem;
  }

  .badge {
    background: rgba(236, 249, 90, 0.2);
    color: var(--accent-lime);
    padding: 0.25rem 0.75rem;
    border-radius: var(--border-radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .footer-links {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const currentYear = document.getElementById('current-year');
    if (currentYear) {
      currentYear.textContent = new Date().getFullYear().toString();
    }
  });
</script>