<style>
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    align-items: start;
    font-family: 'Evolve Sans', sans-serif;
    min-height: fit-content;
  }
  
  .portfolio-label {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
    margin-bottom: 1rem;
  }
  
  .label-line {
    font-size: clamp(0.75rem, 1.2vw, 0.9rem);
    font-weight: 500;
    letter-spacing: 0.05em;
    color: #fff;
    text-transform: uppercase;
  }
  
  .label-line:first-child {
    opacity: 0.7;
    margin-bottom: 0.1rem;
  }
  
  .name {
    font-weight: 600;
    font-size: clamp(1rem, 1.5vw, 1.2rem);
  }
  
  .availability-banner {
    width: 100%;
    background: #32cd32;
    color: #000;
    padding: 0.75rem 2rem;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-align: left;
    font-family: 'Evolve Sans', sans-serif;
  }
  
  .bio {
    font-size: clamp(0.95rem, 2.5vw, 1.1rem);
    font-weight: 400;
    line-height: 1.6;
    color: #e0e0e0;
    margin-bottom: 1rem;
    max-width: 500px;
  }
  
  .cv-button {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background: #fff;
    color: #000;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    border: 2px solid #fff;
  }
  
  .cv-button:hover {
    background: #000;
    color: #fff;
    transform: translateX(4px);
  }
  
  .footer-contact h3 {
    font-size: clamp(1.2rem, 2.5vw, 1.6rem);
    font-weight: 700;
    margin-bottom: 1rem;
    color: #fff;
    font-family: 'Neue Haas Grotesk', sans-serif;
  }
  
  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .contact-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0;
    text-decoration: none;
    color: #e0e0e0;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .contact-link:hover {
    color: #fff;
    transform: translateX(4px);
  }
  
  .contact-text {
    flex-grow: 1;
  }
  
  .contact-arrow {
    font-size: 18px;
    transition: transform 0.3s ease;
    opacity: 0.7;
  }
  
  .contact-link:hover .contact-arrow {
    transform: translate(2px, -2px);
    opacity: 1;
  }
  
  .footer-bottom {
    grid-column: 1 / -1;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .footer-bottom p {
    color: #888;
    font-size: 0.9rem;
    font-weight: 400;
    margin: 0;
    text-align: left;
  }
  
  @media (max-width: 768px) {
    .availability-banner {
      padding: 0.75rem 1rem;
      font-size: 0.85rem;
    }
    
    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 2rem 1rem;
    }
    
    .footer-contact {
      order: -1;
    }
    
    .footer-main {
      text-align: left;
    }
    
    .contact-links {
      gap: 0.5rem;
    }
    
    .contact-link {
      padding: 0.5rem 0;
      font-size: 0.95rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Set current year
    const currentYear = document.getElementById('current-year');
    if (currentYear) {
      currentYear.textContent = new Date().getFullYear().toString();
    }
    
    // Handle obfuscated email links
    const emailLinks = document.querySelectorAll('[data-email]');
    emailLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const email = this.getAttribute('data-email');
        const subject = this.getAttribute('data-subject') || '';
        const mailtoUrl = `mailto:${email}${subject ? '?subject=' + encodeURIComponent(subject) : ''}`;
        window.location.href = mailtoUrl;
      });
    });
  });
</script>