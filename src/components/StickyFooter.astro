<style>
  .footer-section {
    position: fixed;
    top: 0;
    left: 80px; /* Account for nav menu */
    right: 0;
    bottom: 0;
    width: calc(100% - 80px);
    height: 100vh;
    height: 100dvh;
    background: var(--gray-900);
    color: var(--gray-100);
    border-radius: 0;
    overflow: auto;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: 999;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
  }
  
  .footer-section.visible {
    transform: translateY(0);
  }
  
  .footer-close-btn {
    position: absolute;
    top: 2rem;
    right: 2rem;
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-100);
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }
  
  .footer-close-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    color: var(--gray-100);
    transform: scale(1.05);
  }
  
  .footer-close-btn .material-icons {
    font-size: 24px;
  }

  .footer-content {
    max-width: 1200px;
    width: calc(100% - 80px);
    margin: 0 0 0 80px;
    padding: 8rem 3rem 4rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    min-height: calc(100vh - 8rem);
    min-height: calc(100dvh - 8rem);
  }

  .job-opportunity-banner {
    background: linear-gradient(135deg, #c6ff00 0%, #a6d900 100%);
    color: var(--gray-900);
    border-radius: 12px;
    margin-bottom: 3rem;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(198, 255, 0, 0.2);
    transform: scale(1);
    transition: transform 0.3s ease;
  }
  
  .job-opportunity-banner:hover {
    transform: scale(1.02);
  }

  .banner-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    gap: 2rem;
  }

  .banner-text h4 {
    font-family: 'Roboto', sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: var(--gray-900);
  }

  .banner-text p {
    font-family: 'Roboto', sans-serif;
    font-size: 0.95rem;
    margin: 0;
    color: var(--gray-700);
    line-height: 1.5;
  }

  .banner-cta {
    background: var(--gray-900);
    color: var(--gray-100);
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius-sm);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-flex;
    align-items: center;
  }

  .banner-cta:hover {
    background: var(--gray-800);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(33, 37, 41, 0.2);
  }

  .footer-main {
    display: grid;
    grid-template-columns: auto 1fr auto auto;
    gap: 3rem;
    align-items: center;
    margin-bottom: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    width: 100%;
  }

  .footer-logo {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #c6ff00 0%, #a6d900 100%);
    color: var(--gray-900);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Roboto Mono', monospace;
    font-weight: 900;
    font-size: 1.75rem;
    box-shadow: 0 10px 30px rgba(198, 255, 0, 0.3);
  }

  .footer-info h3 {
    font-family: 'Roboto', sans-serif;
    font-size: 2rem;
    font-weight: 900;
    margin: 0 0 0.5rem;
    color: #c6ff00;
  }

  .footer-info p {
    margin: 0 0 0.75rem;
    color: var(--gray-200);
    font-size: 0.95rem;
  }

  .footer-bio {
    max-width: 400px;
    line-height: 1.6;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-link {
    color: var(--gray-200);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s;
    font-size: 0.95rem;
  }

  .footer-link:hover {
    color: var(--gray-400);
    transform: translateX(4px);
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }

  .contact-button {
    background: linear-gradient(135deg, #c6ff00 0%, #a6d900 100%);
    color: var(--gray-900);
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.125rem;
    transition: all 0.3s;
    display: inline-flex;
    align-items: center;
    box-shadow: 0 10px 30px rgba(198, 255, 0, 0.3);
  }

  .contact-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 15px 40px rgba(198, 255, 0, 0.4);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links a {
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--border-radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-200);
    transition: all 0.3s;
  }

  .social-links a:hover {
    background: var(--gray-400);
    color: var(--gray-900);
    transform: translateY(-2px);
  }

  .footer-bottom {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-direction: column;
    gap: 1rem;
    padding-top: 1.5rem;
    width: 100%;
  }

  .copyright {
    margin: 0;
    color: var(--gray-300);
    font-size: 0.875rem;
  }

  .footer-badges {
    display: flex;
    gap: 1rem;
  }

  .badge {
    background: rgba(206, 212, 218, 0.2);
    color: var(--gray-400);
    padding: 0.25rem 0.75rem;
    border-radius: var(--border-radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (max-width: 768px) {
    .footer-section {
      left: 0;
      width: 100%;
    }

    .footer-content {
      padding: 6rem 1.5rem 3rem;
      min-height: calc(100vh - 6rem);
      min-height: calc(100dvh - 6rem);
      width: calc(100% - 64px);
      margin: 0 0 0 64px;
    }

    .footer-close-btn {
      top: 1rem;
      right: 1rem;
      width: 40px;
      height: 40px;
    }

    .footer-close-btn .material-icons {
      font-size: 20px;
    }

    .job-opportunity-banner {
      margin-bottom: 2rem;
    }

    .banner-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
      padding: 1.25rem 1.5rem;
    }

    .banner-cta {
      align-self: stretch;
      text-align: center;
      justify-content: center;
    }

    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-bottom: 2rem;
      padding-bottom: 2rem;
    }

    .footer-logo {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
    }

    .footer-info h3 {
      font-size: 1.75rem;
    }

    .footer-info p {
      font-size: 0.9rem;
    }

    .footer-bio {
      max-width: 100%;
    }

    .contact-button {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
      justify-content: flex-start;
    }

    .footer-links {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1.5rem;
    }

    .footer-badges {
      flex-wrap: wrap;
    }
  }

  @media (max-width: 480px) {
    .footer-content {
      padding: 5rem 1rem 2rem;
      min-height: calc(100vh - 5rem);
      min-height: calc(100dvh - 5rem);
      width: calc(100% - 64px);
      margin: 0 0 0 64px;
    }

    .banner-content {
      padding: 1rem 1.25rem;
    }

    .banner-text h4 {
      font-size: 1rem;
    }

    .banner-text p {
      font-size: 0.875rem;
    }

    .banner-cta {
      padding: 0.625rem 1.25rem;
      font-size: 0.875rem;
    }

    .footer-main {
      gap: 1.5rem;
      margin-bottom: 1.5rem;
      padding-bottom: 1.5rem;
    }

    .footer-logo {
      width: 50px;
      height: 50px;
      font-size: 1.25rem;
    }

    .footer-info h3 {
      font-size: 1.5rem;
    }

    .footer-links {
      gap: 1rem;
    }

    .contact-button {
      padding: 0.75rem 1.25rem;
      font-size: 0.95rem;
    }

    .social-links a {
      width: 32px;
      height: 32px;
    }

    .footer-badges {
      gap: 0.5rem;
    }

    .badge {
      padding: 0.25rem 0.5rem;
      font-size: 0.7rem;
    }
  }
</style>

<script>
  // Update on each page load (SPA compatible)
  document.addEventListener('astro:page-load', function() {
    const currentYear = document.getElementById('current-year');
    if (currentYear) {
      currentYear.textContent = new Date().getFullYear().toString();
    }
    
    // Close button functionality
    const closeBtn = document.getElementById('footerCloseBtn');
    if (closeBtn) {
      closeBtn.addEventListener('click', () => {
        // Dispatch event to close footer from LeftNav
        document.dispatchEvent(new CustomEvent('footer-close'));
      });
    }
  });
</script>