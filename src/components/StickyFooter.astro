<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Set current year
    const currentYear = document.getElementById('current-year');
    if (currentYear) {
      currentYear.textContent = new Date().getFullYear().toString();
    }
    
    // Handle availability banner click
    const availabilityBanner = document.querySelector('.availability-banner');
    if (availabilityBanner) {
      availabilityBanner.addEventListener('click', function() {
        // Scroll to contact section
        const contactSection = document.querySelector('.footer-contact');
        if (contactSection instanceof HTMLElement) {
          contactSection.scrollIntoView({ 
            behavior: 'smooth',
            block: 'center'
          });
          // Add highlight effect
          contactSection.style.animation = 'highlightPulse 1.5s ease-out';
          setTimeout(() => {
            contactSection.style.animation = '';
          }, 1500);
        }
      });
      
      // Keyboard accessibility
      availabilityBanner.addEventListener('keydown', function(e) {
        const keyEvent = e as KeyboardEvent;
        if (keyEvent.key === 'Enter' || keyEvent.key === ' ') {
          e.preventDefault();
          (availabilityBanner as HTMLElement).click();
        }
      });
    }
    
    // Handle obfuscated email links (both contact section and footer)
    const emailLinks = document.querySelectorAll('[data-email]');
    emailLinks.forEach(link => {
      link.addEventListener('click', function(e: Event) {
        e.preventDefault();
        const target = e.currentTarget as HTMLElement;
        const email = target.getAttribute('data-email');
        const subject = target.getAttribute('data-subject') || '';
        const mailtoUrl = `mailto:${email}${subject ? '?subject=' + encodeURIComponent(subject) : ''}`;
        window.location.href = mailtoUrl;
      });
    });
  });
</script>