    text-align: center;
    color: black;
    line-height: 1;
    text-shadow: 
      -0.15em 0 #ff3333,
      0.15em 0 #33ccff,
      -0.2em 0 rgba(255, 51, 51, 0.8),
      0.2em 0 rgba(51, 204, 255, 0.8),
      -0.1em 0 rgba(255, 0, 0, 0.6),
      0.1em 0 rgba(0, 200, 255, 0.6);
    position: relative;
  }
  
  .line-1 {
    font-size: clamp(2rem, 8vw, 12rem);
  }
  
  .line-2 {
    font-size: clamp(1.6rem, 6.4vw, 9.6rem);
  }
  
