<header class="site-header">
  <div class="portfolio-label">
    <span class="label-line">PORTFOLIO OF</span>
    <a href="/" class="label-line name-link underline-to-background">NOLAN FIGUEROA</a>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: clamp(1.5rem, 3vw, 2.5rem) clamp(1.5rem, 3vw, 2.5rem);
    z-index: 100;
    pointer-events: none;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  .portfolio-label {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
    pointer-events: auto;
  }
  
  .label-line {
    font-family: 'Evolve Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: clamp(0.75rem, 1.2vw, 0.9rem);
    font-weight: 500;
    letter-spacing: 0.05em;
    color: #000;
    text-transform: uppercase;
  }
  
  .label-line:first-child {
    opacity: 0.7;
    margin-bottom: 0.1rem;
  }
  
  .label-line:last-child {
    font-weight: 600;
  }
  
  .name-link {
    text-decoration: none;
    color: inherit;
    position: relative;
    display: inline-block;
    cursor: pointer;
    transition: color 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .underline-to-background::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    transform: scaleY(0);
    transform-origin: center;
    transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: -1;
  }
  
  .underline-to-background:hover::before {
    transform: scaleY(1);
  }
  
  .underline-to-background:hover {
    color: #fff;
  }
  
  @media (max-width: 768px) {
    .site-header {
      padding: 1rem;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }
    
    .label-line {
      font-size: 0.7rem;
    }
  }
</style>