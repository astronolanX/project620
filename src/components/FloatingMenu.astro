---
// Get user initials from the meta tag in Layout.astro
const initials = "NF"; // Based on "Nolan Figueroa" from the layout meta

// Selected works mapped to actual project slugs
const selectedWorks = [
  { number: 1, slug: "future-design" },
  { number: 2, slug: "ux-patterns" },
  { number: 3, slug: "spatial-interfaces" },
  { number: 4, slug: "design-systems-scale" },
  { number: 5, slug: "micro-interactions" }
];

// Get current page info for highlighting
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';
const isArchivePage = currentPath === '/archive' || currentPath === '/archive/';
const isProjectPage = currentPath.startsWith('/projects/');
const currentProjectSlug = isProjectPage ? currentPath.split('/projects/')[1]?.replace('/', '') : null;
---

<div class="floating-menu">
  <a href="/" class={`menu-home ${isHomePage ? 'active' : ''}`}>
    <span class="initials" data-text={initials}>{initials}</span>
  </a>
  
  <nav class="menu-numbers">
    {selectedWorks.map((work) => (
      <a href={`/projects/${work.slug}`} class={`menu-number ${currentProjectSlug === work.slug ? 'active' : ''}`} data-number={work.number}>
        <span class="number" data-number={`/${work.number}`}>/{work.number}</span>
      </a>
    ))}
  </nav>
  
  <a href="/archive" class={`menu-archive ${isArchivePage ? 'active' : ''}`}>
    <span class="material-icons archive-icon" data-icon="folder">folder</span>
  </a>
  
  <button class="menu-footer-toggle" id="footerToggle">
    <span class="material-icons copyright-icon">copyright</span>
  </button>
</div>

<!-- Navigation Loading Indicator -->
<div class="navigation-loading" id="navigationLoading"></div>

<style>
  .floating-menu {
    position: fixed;
    top: 50%;
    left: 20px;
    transform: translateY(-50%);
    z-index: 1000;
    background: #333;
    padding: 12px 10px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
    border-radius: 9999px;
    box-shadow: 
      2px 2px 2px rgba(0,0,0,0.8),
      4px 4px 5px rgba(0,0,0,0.6),
      6px 6px 10px rgba(0,0,0,0.5),
      10px 10px 20px rgba(0,0,0,0.3),
      15px 15px 30px rgba(0,0,0,0.2);
    border: none;
    transition: all 0.3s ease;
  }
  
  .floating-menu:hover {
    transform: translateY(-50%);
    box-shadow: 
      3px 3px 3px rgba(0,0,0,0.9),
      6px 6px 8px rgba(0,0,0,0.7),
      9px 9px 15px rgba(0,0,0,0.6),
      15px 15px 30px rgba(0,0,0,0.4),
      22px 22px 45px rgba(0,0,0,0.3);
  }

  .menu-home {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
    background: #333;
    border: 1px solid #555;
    position: relative;
  }
  
  .menu-home:hover:not(.active) {
    background: #444;
    border-color: #666;
  }
  
  .menu-home.active:hover .initials {
    transform: translate(-50%, -50%);
    transform-origin: center center;
  }
  
  .menu-home.active {
    background: #fff;
    box-shadow: 0 4px 16px rgba(255, 255, 255, 0.2);
    border-color: #fff;
  }
  
  .menu-home:hover .initials {
    color: #ccc;
  }
  
  .menu-home.active .initials {
    color: #000;
    font-weight: 900;
  }
  
  .initials {
    font-family: 'Roboto Mono', monospace;
    font-size: 14px;
    font-weight: 700;
    font-style: italic;
    color: #aaa;
    letter-spacing: 0.5px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transform-origin: center center;
    width: 100%;
    height: 100%;
  }

  .menu-archive {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .menu-archive:hover:not(.active) {
    background: #444;
  }
  
  .menu-archive.active:hover .archive-icon {
    transform: translate(-50%, -50%);
    transform-origin: center center;
  }
  
  .menu-archive.active {
    background: #fff;
    box-shadow: 0 4px 16px rgba(255, 255, 255, 0.2);
  }
  
  .archive-icon {
    font-size: 16px;
    color: #aaa;
    transition: all 0.3s ease;
    line-height: 1;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transform-origin: center center;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .menu-archive:hover .archive-icon {
    color: #ccc;
  }
  
  .menu-archive.active .archive-icon {
    color: #000;
  }
  
  .menu-numbers {
    display: flex;
    flex-direction: column;
    gap: 6px;
    align-items: center;
    --logmar-ratio: 1.25;
  }
  
  .menu-number {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: 50%;
    line-height: 1;
    position: relative;
    width: 34px;
    height: 34px;
  }
  
  .menu-number:hover:not(.active) {
    background: #444;
  }
  
  .menu-number.active:hover .number {
    transform: translate(-50%, -50%);
    transform-origin: center center;
  }
  
  .number {
    font-family: 'Roboto Mono', monospace;
    font-weight: 600;
    color: #aaa;
    transition: all 0.3s ease;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transform-origin: center center;
  }
  
  .menu-number:hover .number {
    color: #ccc;
  }
  
  .menu-number.active .number {
    color: #000;
    font-weight: 900;
  }
  
  /* Dynamic coloring for active numbered sections - white active state */
  .menu-number[data-number="1"].active {
    background: #fff;
    box-shadow: 0 4px 16px rgba(255, 255, 255, 0.2);
  }
  
  .menu-number[data-number="2"].active {
    background: #fff;
    box-shadow: 0 4px 16px rgba(255, 255, 255, 0.2);
  }
  
  .menu-number[data-number="3"].active {
    background: #fff;
    box-shadow: 0 4px 16px rgba(255, 255, 255, 0.2);
  }
  
  .menu-number[data-number="4"].active {
    background: #fff;
    box-shadow: 0 4px 16px rgba(255, 255, 255, 0.2);
  }
  
  .menu-number[data-number="5"].active {
    background: #fff;
    box-shadow: 0 4px 16px rgba(255, 255, 255, 0.2);
  }
  
  /* Smooth transitions for all sizing and background changes */
  .menu-number {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .menu-number .number {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Enhanced transitions for size changes */
  .menu-numbers[data-selected] .menu-number {
    transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                height 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                background 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .menu-numbers[data-selected] .menu-number .number {
    transition: font-size 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                color 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Uniform size for all numbers - no logmar scaling */
  
  .menu-number .number {
    font-size: 14px;
  }
  
  .menu-footer-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    background: transparent;
    border: none;
    border-radius: 50%;
    transition: all 0.3s ease;
    cursor: pointer;
    padding: 0;
    position: relative;
  }
  
  .menu-footer-toggle:hover:not(.active) {
    background: #444;
  }
  
  .menu-footer-toggle.active {
    background: #fff;
  }
  
  .menu-footer-toggle.active:hover .copyright-icon {
    transform: translate(-50%, -50%);
    transform-origin: center center;
  }
  
  .menu-footer-toggle.active.bounce {
    animation: bounce 0.25s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .menu-footer-toggle .copyright-icon {
    font-size: 16px;
    color: #aaa;
    transition: all 0.3s ease;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transform-origin: center center;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .menu-footer-toggle:hover .copyright-icon {
    color: #ccc;
    transform: translate(-50%, -50%) rotate(-15deg);
  }
  
  .menu-footer-toggle.active .copyright-icon {
    color: #000;
  }
  
  /* Loading indicator */
  .navigation-loading {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(
      90deg, 
      transparent 0%, 
      #fff 50%, 
      transparent 100%
    );
    transform: translateX(-100%);
    animation: loading-slide 1s ease-in-out infinite;
    z-index: 10001;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .navigation-loading.active {
    opacity: 1;
  }
  
  @keyframes loading-slide {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100vw); }
  }
  
  @keyframes shrink {
    0% { transform: scale(1); }
    50% { transform: scale(0.9); }
    100% { transform: scale(1); }
  }
  
  
  .menu-home.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  .menu-number.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  .menu-archive.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  .menu-footer-toggle.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .floating-menu {
      top: 50%;
      left: 16px;
      transform: translateY(-50%);
      padding: 10px 8px;
      gap: 6px;
    }
    
    .menu-home {
      width: 30px;
      height: 30px;
    }
    
    .initials {
      font-size: 12px;
    }
    
    .menu-archive {
      width: 30px;
      height: 30px;
    }
    
    .archive-icon {
      font-size: 14px;
    }
    
    .menu-footer-toggle {
      width: 30px;
      height: 30px;
    }
    
    .menu-footer-toggle .copyright-icon {
      font-size: 14px;
    }
    
  }
  
</style>

<script>
  class FloatingMenu {
    private footerToggle: HTMLElement | null;
    private footerVisible: boolean = false;
    
    constructor() {
      this.footerToggle = document.getElementById('footerToggle');
      this.initFooterToggle();
      this.initKeyboardHandlers();
    }
    
    initFooterToggle() {
      if (this.footerToggle) {
        this.footerToggle.addEventListener('click', () => {
          this.toggleFooter();
        });
      }
    }
    
    toggleFooter() {
      const footer = document.querySelector('.footer-section');
      if (!footer) return;
      
      this.footerVisible = !this.footerVisible;
      
      if (this.footerVisible) {
        footer.classList.add('visible');
        this.footerToggle?.classList.add('active');
      } else {
        footer.classList.remove('visible');
        this.footerToggle?.classList.remove('active');
      }
    }
    
    initKeyboardHandlers() {
      document.addEventListener('keydown', (e) => {
        // Close footer on Escape key
        if (e.key === 'Escape' && this.footerVisible) {
          this.toggleFooter();
        }
      });
      
      // Listen for footer close button clicks
      document.addEventListener('footer-close', () => {
        if (this.footerVisible) {
          this.toggleFooter();
        }
      });
    }
  }
  
  // Initialize when DOM loads
  document.addEventListener('DOMContentLoaded', () => {
    new FloatingMenu();
  });
</script>