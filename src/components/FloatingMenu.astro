---
// Get user initials from the meta tag in Layout.astro
const initials = "NF"; // Based on "Nolan Figueroa" from the layout meta

// Selected works mapped to actual project slugs
const selectedWorks = [
  { number: 1, slug: "future-design" },
  { number: 2, slug: "ux-patterns" },
  { number: 3, slug: "spatial-interfaces" },
  { number: 4, slug: "design-systems-scale" },
  { number: 5, slug: "micro-interactions" }
];

// Get current page info for highlighting
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';
const isArchivePage = currentPath === '/archive' || currentPath === '/archive/';
const isProjectPage = currentPath.startsWith('/projects/');
const currentProjectSlug = isProjectPage ? currentPath.split('/projects/')[1]?.replace('/', '') : null;
---

<div class="floating-menu">
  <a href="/" class={`menu-home ${isHomePage ? 'active' : ''}`}>
    <span class="initials" data-text={initials}>{initials}</span>
  </a>
  
  <nav class="menu-numbers">
    {selectedWorks.map((work) => (
      <a href={`/projects/${work.slug}`} class={`menu-number ${currentProjectSlug === work.slug ? 'active' : ''}`} data-number={work.number}>
        <span class="number" data-number={`/${work.number}`}>/{work.number}</span>
      </a>
    ))}
  </nav>
  
  <a href="/archive" class={`menu-archive ${isArchivePage ? 'active' : ''}`}>
    <span class="material-icons archive-icon" data-icon="folder">folder</span>
  </a>
  
  <button class="menu-footer-toggle" id="footerToggle">
    <span class="material-icons copyright-icon">copyright</span>
  </button>
</div>

<!-- Navigation Loading Indicator -->
<div class="navigation-loading" id="navigationLoading"></div>

<style>
  .floating-menu {
    position: fixed;
    top: 50%;
    left: 20px;
    transform: translateY(-50%);
    z-index: 1000;
    background: #333;
    padding: 12px 10px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
    border-radius: 9999px;
    box-shadow: 
      2px 2px 2px rgba(0,0,0,0.8),
      4px 4px 5px rgba(0,0,0,0.6),
      6px 6px 10px rgba(0,0,0,0.5),
      10px 10px 20px rgba(0,0,0,0.3),
      15px 15px 30px rgba(0,0,0,0.2);
    border: none;
    transition: all 0.3s ease;
  }

  /* Active states for navigation items */
  .floating-menu .active:not(.menu-footer-toggle):not(.no-animation) {
    background: #c6ff00;
    box-shadow: 0 4px 16px rgba(198, 255, 0, 0.3);
    animation: scaleIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }
  
  /* Active state without animation (for preventing double animations) */
  .floating-menu .active.no-animation:not(.menu-footer-toggle) {
    background: #c6ff00;
    box-shadow: 0 4px 16px rgba(198, 255, 0, 0.3);
  }
  
  
  @keyframes scaleIn {
    from {
      transform: scale(0);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
  
  /* Click animation for active items - re-triggers the scale animation */
  .floating-menu .active.clicked:not(.menu-footer-toggle) {
    animation: clickPulse 0.4s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }
  
  @keyframes clickPulse {
    0% {
      transform: scale(1);
    }
    30% {
      transform: scale(0.85);
    }
    60% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
    }
  }
  
  /* Click animation for non-active items */
  .floating-menu .clicked:not(.active) {
    animation: clickBounce 0.3s ease-out;
  }
  
  @keyframes clickBounce {
    0% {
      transform: scale(1);
    }
    40% {
      transform: scale(0.9);
    }
    100% {
      transform: scale(1);
    }
  }
  

  .menu-home {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .menu-home:hover:not(.active) {
    background: #444;
  }
  
  .menu-home.active:hover .initials {
    transform: var(--center-transform);
    transform-origin: center center;
  }
  
  
  .menu-home:hover .initials {
    color: #ccc;
  }
  
  .menu-home.active .initials {
    color: #000;
    font-weight: 900;
  }
  
  /* Common centered positioning for menu items */
  .initials,
  .archive-icon,
  .number,
  .copyright-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: var(--center-transform);
    transform-origin: center center;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    line-height: 1;
  }
  
  .initials {
    font-family: 'Roboto Mono', monospace;
    font-size: 14px;
    font-weight: 700;
    font-style: italic;
    color: #c6ff00;
    letter-spacing: 0.5px;
  }

  .menu-archive {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .menu-archive:hover:not(.active) {
    background: #444;
  }
  
  .menu-archive.active:hover .archive-icon {
    transform: var(--center-transform);
    transform-origin: center center;
  }
  
  
  .archive-icon {
    font-size: 16px;
    color: #aaa;
  }
  
  .menu-archive:hover .archive-icon {
    color: #ccc;
  }
  
  .menu-archive.active .archive-icon {
    color: #000;
  }
  
  .menu-numbers {
    display: flex;
    flex-direction: column;
    gap: 6px;
    align-items: center;
    --logmar-ratio: 1.25;
  }
  
  .menu-number {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: 50%;
    line-height: 1;
    position: relative;
    width: 34px;
    height: 34px;
  }
  
  .menu-number:hover:not(.active) {
    background: #444;
  }
  
  .menu-number.active:hover .number {
    transform: var(--center-transform);
    transform-origin: center center;
  }
  
  .number {
    font-family: 'Roboto Mono', monospace;
    font-weight: 600;
    color: #aaa;
    font-size: 14px;
  }
  
  .menu-number:hover .number {
    color: #ccc;
  }
  
  .menu-number.active .number {
    color: #000;
    font-weight: 900;
  }
  
  
  /* Smooth transitions for all sizing and background changes */
  .menu-number {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .menu-number .number {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Enhanced transitions for size changes */
  .menu-numbers[data-selected] .menu-number {
    transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                height 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                background 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .menu-numbers[data-selected] .menu-number .number {
    transition: font-size 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                color 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  
  .menu-footer-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    background: transparent;
    border: none;
    border-radius: 50%;
    transition: all 0.3s ease;
    cursor: pointer;
    padding: 0;
    position: relative;
  }
  
  .menu-footer-toggle:hover:not(.active) {
    background: #444;
  }
  
  
  .menu-footer-toggle.active:hover .copyright-icon {
    transform: var(--center-transform);
    transform-origin: center center;
  }
  
  .menu-footer-toggle.active.bounce {
    animation: bounce 0.25s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .copyright-icon {
    font-size: 16px;
    color: #aaa;
  }
  
  .menu-footer-toggle:hover .copyright-icon {
    color: #ccc;
    transform: translate(-50%, -50%) rotate(-15deg);
  }
  
  .menu-footer-toggle.active .copyright-icon {
    color: #c6ff00;
  }
  
  /* Loading indicator */
  .navigation-loading {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(
      90deg, 
      transparent 0%, 
      #fff 50%, 
      transparent 100%
    );
    transform: translateX(-100%);
    animation: loading-slide 1s ease-in-out infinite;
    z-index: 10001;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .navigation-loading.active {
    opacity: 1;
  }
  
  @keyframes loading-slide {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100vw); }
  }
  
  @keyframes shrink {
    0% { transform: scale(1); }
    50% { transform: scale(0.9); }
    100% { transform: scale(1); }
  }
  
  
  .menu-home.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  .menu-number.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  .menu-archive.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  .menu-footer-toggle.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .floating-menu {
      top: 50%;
      left: 16px;
      transform: translateY(-50%);
      padding: 10px 8px;
      gap: 6px;
    }

    .menu-home {
      width: 30px;
      height: 30px;
    }
    
    .initials {
      font-size: 12px;
    }
    
    .menu-archive {
      width: 30px;
      height: 30px;
    }
    
    .archive-icon {
      font-size: 14px;
    }
    
    .menu-footer-toggle {
      width: 30px;
      height: 30px;
    }
    
    .menu-footer-toggle .copyright-icon {
      font-size: 14px;
    }
    
  }
  
</style>

<script>
  // Initialize global SPA state for menu
  window.menuState = window.menuState || {
    footerVisible: false,
    initialized: false
  };

  class FloatingMenu {
    private footerToggle: HTMLElement | null;
    
    constructor() {
      this.footerToggle = document.getElementById('footerToggle');
      this.initFooterToggle();
      this.initKeyboardHandlers();
      this.initNavigationHandlers();
      
      // Restore footer state
      if (window.menuState.footerVisible) {
        const footer = document.querySelector('.footer-section');
        if (footer) {
          footer.classList.add('visible');
          this.footerToggle?.classList.add('active');
        }
      }
    }
    
    initFooterToggle() {
      if (this.footerToggle) {
        this.footerToggle.addEventListener('click', () => {
          this.toggleFooter();
        });
      }
    }
    
    toggleFooter() {
      const footer = document.querySelector('.footer-section');
      if (!footer) return;
      
      // Update global state
      window.menuState.footerVisible = !window.menuState.footerVisible;
      
      if (window.menuState.footerVisible) {
        footer.classList.add('visible');
        this.footerToggle?.classList.add('active');
      } else {
        footer.classList.remove('visible');
        this.footerToggle?.classList.remove('active');
      }
    }
    
    initKeyboardHandlers() {
      document.addEventListener('keydown', (e) => {
        // Close footer on Escape key
        if (e.key === 'Escape' && window.menuState.footerVisible) {
          this.toggleFooter();
        }
      });
      
      // Listen for footer close button clicks
      document.addEventListener('footer-close', () => {
        if (window.menuState.footerVisible) {
          this.toggleFooter();
        }
      });
    }
    
    initNavigationHandlers() {
      // Handle clicks on all navigation items
      const navItems = document.querySelectorAll('.menu-home, .menu-number, .menu-archive');
      
      navItems.forEach(item => {
        item.addEventListener('click', (e) => {
          const clickedItem = e.currentTarget as HTMLAnchorElement;
          const href = clickedItem.href;
          const currentUrl = window.location.href;
          
          // If clicking on the already active page, just animate
          if (href === currentUrl && clickedItem.classList.contains('active')) {
            e.preventDefault();
            
            // Add shrink animation
            clickedItem.classList.add('shrink');
            
            // Remove animation class after animation completes
            setTimeout(() => {
              clickedItem.classList.remove('shrink');
            }, 150);
            
            // Close footer if open
            if (window.menuState.footerVisible) {
              this.toggleFooter();
            }
            return;
          }
          
          // Close footer if open (but don't prevent navigation in SPA mode)
          if (window.menuState.footerVisible) {
            window.menuState.footerVisible = false;
            this.footerToggle?.classList.remove('active');
            const footer = document.querySelector('.footer-section');
            footer?.classList.remove('visible');
          }
        });
      });
    }
  }
  
  // Initialize on page load (works with View Transitions)
  document.addEventListener('astro:page-load', () => {
    new FloatingMenu();
    
    // Mark as initialized after first load
    if (!window.menuState.initialized) {
      window.menuState.initialized = true;
    }
  });
  
  // Handle before page swap to show navigation loading
  document.addEventListener('astro:before-swap', () => {
    const loadingBar = document.getElementById('navigationLoading');
    if (loadingBar) {
      loadingBar.classList.add('active');
    }
  });
  
  // Handle after swap to hide loading
  document.addEventListener('astro:after-swap', () => {
    const loadingBar = document.getElementById('navigationLoading');
    if (loadingBar) {
      loadingBar.classList.remove('active');
    }
  });
</script>