</style>

<script>
  class FloatingMenu {
    private footerToggle: HTMLElement | null;
    private menuNumbers: HTMLElement | null;
    
    constructor() {
      this.footerToggle = document.getElementById('footerToggle');
      this.menuNumbers = document.querySelector('.menu-numbers');
      this.initFooterToggle();
      this.initLogmarSizing();
      this.initBrowserNavigation();
    }
    
    initFooterToggle() {
      if (this.footerToggle) {
        this.footerToggle.addEventListener('click', () => {
          // Scroll to bottom to reveal sticky footer
          window.scrollTo({
            top: document.documentElement.scrollHeight,
            behavior: 'smooth'
          });
        });
      }
    }
    
    initLogmarSizing() {
      if (!this.menuNumbers) return;
      
      // Set initial state based on current page
      this.updateLogmarState();
      
      // Add click handlers for seamless transitions
      this.addTransitionHandlers();
    }
    
    updateLogmarState() {
      // Get current section from URL hash or default to home
      const hash = window.location.hash.substring(1);
      let selectedState = 'home';
      
      if (hash === 'archive') {
        selectedState = 'archive';
      } else if (['1', '2', '3', '4', '5'].includes(hash)) {
        selectedState = hash;
      } else if (hash === '' || hash === 'home') {
        selectedState = 'home';
      }
      
      // Apply the data-selected attribute
      if (this.menuNumbers) {
        this.menuNumbers.setAttribute('data-selected', selectedState);
      }
      
      // Update active states
      this.updateActiveStates(selectedState);
    }
    
    addTransitionHandlers() {
      // Add click handlers to all menu items for real-time transitions
      const homeLink = document.querySelector('.menu-home');
      const archiveLink = document.querySelector('.menu-archive');
      const numberLinks = document.querySelectorAll('.menu-number');
      
      // Home click handler
      if (homeLink) {
        homeLink.addEventListener('click', (e) => {
          e.preventDefault();
          this.navigateToContent('/', 'home');
        });
      }
      
      // Archive click handler
      if (archiveLink) {
        archiveLink.addEventListener('click', (e) => {
          e.preventDefault();
          this.navigateToContent('/archive', 'archive');
        });
      }
      
      // Number click handlers
      numberLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const number = link.getAttribute('data-number');
          const href = link.getAttribute('href');
          if (number && href) {
            this.navigateToContent(href, number);
          }
        });
      });
    }
    
    animateToState(newState: string) {
      // Smoothly transition to new state
      if (this.menuNumbers) {
        this.menuNumbers.setAttribute('data-selected', newState);
        
        // Update active states immediately for visual feedback
        this.updateActiveStates(newState);
      }
    }
    
    updateActiveStates(selectedState: string) {
      // Remove all active classes
      document.querySelectorAll('.menu-home, .menu-archive, .menu-number').forEach(el => {
        el.classList.remove('active');
      });
      
      // Add active class to selected item
      if (selectedState === 'home') {
        document.querySelector('.menu-home')?.classList.add('active');
      } else if (selectedState === 'archive') {
        document.querySelector('.menu-archive')?.classList.add('active');
      } else if (['1', '2', '3', '4', '5'].includes(selectedState)) {
        document.querySelector(`.menu-number[data-number="${selectedState}"]`)?.classList.add('active');
      }
    }
    
    navigateToContent(url: string, state: string) {
      // Extract section from state or URL
      let section;
      if (state === 'home') {
        section = 'home';
      } else if (state === 'archive') {
        section = 'archive';
      } else if (['1', '2', '3', '4', '5'].includes(state)) {
        section = state;
      } else {
        section = 'home';
      }
      
      // Animate to new state immediately for visual feedback
      this.animateToState(state);
      
      // Dispatch SPA navigation event
      document.dispatchEvent(new CustomEvent('spa-navigate', {
        detail: { section }
      }));
    }
    
    initBrowserNavigation() {
      // Listen for SPA section changes to update menu state
      document.addEventListener('spa-section-changed', (e: Event) => {
        const section = (e as CustomEvent).detail.section;
        let state;
        
