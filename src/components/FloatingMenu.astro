---
// Get user initials from the meta tag in Layout.astro
const initials = "NF"; // Based on "Nolan Figueroa" from the layout meta

// Selected works mapped to actual project slugs
const selectedWorks = [
  { number: 1, slug: "future-design" },
  { number: 2, slug: "ux-patterns" },
  { number: 3, slug: "spatial-interfaces" },
  { number: 4, slug: "design-systems-scale" },
  { number: 5, slug: "micro-interactions" }
];

// Get current page info for highlighting
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';
---

<div class="floating-menu">
  <a href="/" class={`menu-home ${isHomePage ? 'active' : ''}`}>
    <span class="initials" data-text={initials}>{initials}</span>
  </a>
  
  <nav class="menu-numbers">
    {selectedWorks.map((work) => (
      <a href={`/#${work.number}`} class={`menu-number`} data-number={work.number}>
        <span class="number" data-number={`/${work.number}`}>/{work.number}</span>
      </a>
    ))}
  </nav>
  
  <a href="/#archive" class={`menu-archive`}>
    <span class="material-icons archive-icon" data-icon="folder">folder</span>
  </a>
  
  <button class="menu-footer-toggle" id="footerToggle">
    <span class="material-icons copyright-icon">copyright</span>
  </button>
</div>

<!-- Navigation Loading Indicator -->
<div class="navigation-loading" id="navigationLoading"></div>

<style>
  .floating-menu {
    position: fixed;
    top: 50%;
    left: 20px;
    transform: translateY(-50%);
    z-index: 1000;
    background: rgba(0, 0, 0, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 10px 8px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
    border-radius: 9999px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }
  
  .floating-menu:hover {
    background: rgba(0, 0, 0, 0.9);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }
  
  .menu-home {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.1);
    box-shadow: inset 0 1px 2px rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }
  
  .menu-home:hover:not(.active) {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.25);
    box-shadow: inset 0 1px 3px rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.25);
  }
  
  .menu-home.active:hover .initials {
    transform: scale(1.1);
  }
  
  .menu-home.active {
    background: var(--color-home);
    transform: scale(1.1);
    box-shadow: 0 4px 16px rgba(0, 119, 255, 0.4);
    border-color: var(--color-home-light);
  }
  
  .menu-home:hover .initials {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .menu-home.active .initials {
    color: white;
    font-weight: 900;
  }
  
  .initials {
    font-family: 'Roboto Mono', monospace;
    font-size: 14px;
    font-weight: 700;
    font-style: italic;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 0.5px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .menu-archive {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
  }
  
  .menu-archive:hover:not(.active) {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.25);
  }
  
  .menu-archive.active:hover .archive-icon {
    transform: scale(1.1);
  }
  
  .menu-archive.active {
    background: var(--color-archive);
    transform: scale(1.1);
    box-shadow: 0 4px 16px rgba(107, 114, 128, 0.4);
  }
  
  .archive-icon {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    line-height: 1;
  }
  
  .menu-archive:hover .archive-icon {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .menu-archive.active .archive-icon {
    color: white;
  }
  
  .menu-numbers {
    display: flex;
    flex-direction: column;
    gap: 6px;
    align-items: center;
    --logmar-ratio: 1.25;
  }
  
  .menu-number {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: 50%;
    line-height: 1;
  }
  
  .menu-number:hover:not(.active) {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.25);
  }
  
  .menu-number.active:hover .number {
    transform: scale(1.1);
  }
  
  .number {
    font-family: 'Roboto Mono', monospace;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .menu-number:hover .number {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .menu-number.active .number {
    color: white;
    font-weight: 900;
  }
  
  /* Dynamic coloring for active numbered sections */
  .menu-number[data-number="1"].active {
    background: var(--color-section-1);
    box-shadow: 0 4px 16px rgba(139, 61, 255, 0.4);
  }
  
  .menu-number[data-number="2"].active {
    background: var(--color-section-2);
    box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4);
  }
  
  .menu-number[data-number="3"].active {
    background: var(--color-section-3);
    box-shadow: 0 4px 16px rgba(255, 27, 141, 0.4);
  }
  
  .menu-number[data-number="4"].active {
    background: var(--color-section-4);
    box-shadow: 0 4px 16px rgba(255, 140, 0, 0.4);
  }
  
  .menu-number[data-number="5"].active {
    background: var(--color-section-5);
    box-shadow: 0 4px 16px rgba(255, 51, 102, 0.4);
  }
  
  /* Smooth transitions for all sizing and background changes */
  .menu-number {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .menu-number .number {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Enhanced transitions for size changes */
  .menu-numbers[data-selected] .menu-number {
    transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                height 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                background 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .menu-numbers[data-selected] .menu-number .number {
    transition: font-size 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                color 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Uniform size for all numbers - no logmar scaling */
  .menu-number {
    width: 34px;
    height: 34px;
  }
  
  .menu-number .number {
    font-size: 14px;
  }
  
  .menu-footer-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    background: transparent;
    border: none;
    border-radius: 50%;
    transition: all 0.3s ease;
    cursor: pointer;
    padding: 0;
  }
  
  .menu-footer-toggle:hover:not(.active) {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.25);
  }
  
  .menu-footer-toggle.active {
    background: rgba(255, 255, 255, 0.9);
    transform: scale(1.1);
  }
  
  .menu-footer-toggle.active:hover .copyright-icon {
    transform: scale(1.1);
  }
  
  .menu-footer-toggle.active.bounce {
    animation: bounce 0.25s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .menu-footer-toggle .copyright-icon {
    font-size: 16px;
    color: rgba(255, 255, 255, 0.4);
    transition: all 0.3s ease;
  }
  
  .menu-footer-toggle:hover .copyright-icon {
    color: rgba(255, 255, 255, 0.7);
    transform: rotate(-15deg);
  }
  
  .menu-footer-toggle.active .copyright-icon {
    color: rgba(0, 0, 0, 0.9);
  }
  
  /* Loading indicator */
  .navigation-loading {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(
      90deg, 
      transparent 0%, 
      var(--gray-400) 50%, 
      transparent 100%
    );
    transform: translateX(-100%);
    animation: loading-slide 1s ease-in-out infinite;
    z-index: 10001;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .navigation-loading.active {
    opacity: 1;
  }
  
  @keyframes loading-slide {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100vw); }
  }
  
  @keyframes shrink {
    0% { transform: scale(1); }
    50% { transform: scale(0.9); }
    100% { transform: scale(1); }
  }
  
  .menu-home.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  .menu-number.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  .menu-archive.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  .menu-footer-toggle.active.shrink {
    animation: shrink 0.15s ease-out;
  }
  
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .floating-menu {
      top: 50%;
      left: 16px;
      transform: translateY(-50%);
      padding: 8px 6px;
      gap: 5px;
    }
    
    .menu-home {
      width: 30px;
      height: 30px;
    }
    
    .initials {
      font-size: 12px;
    }
    
    .menu-archive {
      width: 30px;
      height: 30px;
    }
    
    .archive-icon {
      font-size: 14px;
    }
    
    .menu-footer-toggle {
      width: 30px;
      height: 30px;
    }
    
    .menu-footer-toggle .copyright-icon {
      font-size: 14px;
    }
    
  }
  
</style>

<script>
  class FloatingMenu {
    private footerToggle: HTMLElement | null;
    private menuNumbers: HTMLElement | null;
    private footerVisible: boolean = false;
    
    constructor() {
      this.footerToggle = document.getElementById('footerToggle');
      this.menuNumbers = document.querySelector('.menu-numbers');
      this.initFooterToggle();
      this.initLogmarSizing();
      this.initBrowserNavigation();
      this.initKeyboardHandlers();
    }
    
    initFooterToggle() {
      if (this.footerToggle) {
        this.footerToggle.addEventListener('click', () => {
          this.toggleFooter();
        });
      }
    }
    
    toggleFooter() {
      const footer = document.querySelector('.footer-section');
      if (!footer) return;
      
      this.footerVisible = !this.footerVisible;
      
      if (this.footerVisible) {
        footer.classList.add('visible');
        this.footerToggle?.classList.add('active');
      } else {
        footer.classList.remove('visible');
        this.footerToggle?.classList.remove('active');
      }
    }
    
    
    initLogmarSizing() {
      if (!this.menuNumbers) return;
      
      // Set initial state based on current page
      this.updateLogmarState();
      
      // Add click handlers for seamless transitions
      this.addTransitionHandlers();
    }
    
    updateLogmarState() {
      // Get current section from URL hash or default to home
      const hash = window.location.hash.substring(1);
      let selectedState = 'home';
      
      if (hash === 'archive') {
        selectedState = 'archive';
      } else if (['1', '2', '3', '4', '5'].includes(hash)) {
        selectedState = hash;
      }
      
      // Apply the data-selected attribute
      if (this.menuNumbers) {
        this.menuNumbers.setAttribute('data-selected', selectedState);
      }
      
      // Update active states
      this.updateActiveStates(selectedState);
    }
    
    addTransitionHandlers() {
      // Add click handlers to all menu items for real-time transitions
      const homeLink = document.querySelector('.menu-home');
      const archiveLink = document.querySelector('.menu-archive');
      const numberLinks = document.querySelectorAll('.menu-number');
      
      // Home click handler
      if (homeLink) {
        homeLink.addEventListener('click', (e) => {
          e.preventDefault();
          
          // If already active, show bounce feedback
          if (homeLink.classList.contains('active')) {
            this.addShrinkEffect(homeLink as HTMLElement);
            return;
          }
          
          this.navigateToContent('/', 'home');
        });
      }
      
      // Archive click handler
      if (archiveLink) {
        archiveLink.addEventListener('click', (e) => {
          e.preventDefault();
          
          // If already active, show bounce feedback
          if (archiveLink.classList.contains('active')) {
            this.addShrinkEffect(archiveLink as HTMLElement);
            return;
          }
          
          this.navigateToContent('/#archive', 'archive');
        });
      }
      
      // Number click handlers
      numberLinks.forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          
          const number = link.getAttribute('data-number');
          
          // If already active, show bounce feedback
          if (link.classList.contains('active')) {
            this.addShrinkEffect(link as HTMLElement);
            return;
          }
          
          if (number) {
            this.navigateToContent(`/#${number}`, number);
          }
        });
      });
    }
    
    initKeyboardHandlers() {
      document.addEventListener('keydown', (e) => {
        // Close footer on Escape key
        if (e.key === 'Escape' && this.footerVisible) {
          this.toggleFooter();
        }
      });
      
      // Listen for footer close button clicks
      document.addEventListener('footer-close', () => {
        if (this.footerVisible) {
          this.toggleFooter();
        }
      });
    }
    
    addShrinkEffect(element: HTMLElement) {
      // Add shrink class
      element.classList.add('shrink');
      
      // Remove shrink class after animation completes
      setTimeout(() => {
        element.classList.remove('shrink');
      }, 150);
    }
    
    animateToState(newState: string) {
      // Smoothly transition to new state
      if (this.menuNumbers) {
        this.menuNumbers.setAttribute('data-selected', newState);
        
        // Update active states immediately for visual feedback
        this.updateActiveStates(newState);
      }
    }
    
    updateActiveStates(selectedState: string) {
      // Remove all active classes
      document.querySelectorAll('.menu-home, .menu-archive, .menu-number').forEach(el => {
        el.classList.remove('active');
      });
      
      // Add active class to selected item
      if (selectedState === 'home') {
        document.querySelector('.menu-home')?.classList.add('active');
      } else if (selectedState === 'archive') {
        document.querySelector('.menu-archive')?.classList.add('active');
      } else if (['1', '2', '3', '4', '5'].includes(selectedState)) {
        document.querySelector(`.menu-number[data-number="${selectedState}"]`)?.classList.add('active');
      }
    }
    
    navigateToContent(_url: string, state: string) {
      // Extract section from state or URL
      let section;
      if (state === 'home') {
        section = 'home';
      } else if (state === 'archive') {
        section = 'archive';
      } else if (['1', '2', '3', '4', '5'].includes(state)) {
        section = state;
      } else {
        section = 'home';
      }
      
      // Animate to new state immediately for visual feedback
      this.animateToState(state);
      
      // Dispatch SPA navigation event
      document.dispatchEvent(new CustomEvent('spa-navigate', {
        detail: { section }
      }));
    }
    
    initBrowserNavigation() {
      // Listen for SPA section changes to update menu state
      document.addEventListener('spa-section-changed', (e: Event) => {
        const section = (e as CustomEvent).detail.section;
        let state;
        
        if (section === 'home') {
          state = 'home';
        } else if (section === 'archive') {
          state = 'archive';
        } else if (['1', '2', '3', '4', '5'].includes(section)) {
          state = section;
        } else {
          state = 'home';
        }
        
        this.animateToState(state);
      });
      
      // Handle browser back/forward buttons and hash changes
      window.addEventListener('popstate', () => {
        this.updateLogmarState();
      });
      
      window.addEventListener('hashchange', () => {
        this.updateLogmarState();
      });
      
      // Handle page load/refresh to ensure menu state is correct
      window.addEventListener('load', () => {
        this.updateLogmarState();
      });
    }
  }
  
  // Initialize when DOM loads
  document.addEventListener('DOMContentLoaded', () => {
    new FloatingMenu();
  });
</script>