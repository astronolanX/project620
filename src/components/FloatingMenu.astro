---
// Get user initials from the meta tag in Layout.astro
const initials = "NF"; // Based on "Nolan Figueroa" from the layout meta

// Selected works mapped to actual project slugs
const selectedWorks = [
  { number: 1, slug: "future-design" },
  { number: 2, slug: "ux-patterns" },
  { number: 3, slug: "spatial-interfaces" },
  { number: 4, slug: "design-systems-scale" },
  { number: 5, slug: "micro-interactions" }
];

// Get current page info for highlighting
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';
const isArchivePage = currentPath === '/archive' || currentPath === '/archive/';
const isProjectPage = currentPath.startsWith('/projects/');
const currentProjectSlug = isProjectPage ? currentPath.split('/projects/')[1]?.replace('/', '') : null;
---

<div class="floating-menu">
  <a href="/" class={`menu-home ${isHomePage ? 'active' : ''}`}>
    <span class="initials" data-text={initials}>{initials}</span>
  </a>
  
  <nav class="menu-numbers">
    {selectedWorks.map((work) => (
      <a href={`/projects/${work.slug}`} class={`menu-number ${currentProjectSlug === work.slug ? 'active' : ''}`} data-number={work.number}>
        <span class="number" data-number={work.number}>{work.number}</span>
      </a>
    ))}
  </nav>
  
  <a href="/archive" class={`menu-archive ${isArchivePage ? 'active' : ''}`}>
    <span class="material-icons archive-icon" data-icon="folder">folder</span>
  </a>
  
  <button class="menu-footer-toggle" id="footerToggle">
    <span class="material-icons copyright-icon">copyright</span>
  </button>
</div>

<!-- Navigation Loading Indicator -->
<div class="navigation-loading" id="navigationLoading"></div>

<style>
  .floating-menu {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 10px 8px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
    border-radius: 9999px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }
  
  .floating-menu:hover {
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
  }
  
  .menu-home {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
  }
  
  .menu-home:hover {
    background: rgba(0, 0, 0, 0.05);
    transform: scale(1.25);
  }
  
  .menu-home.active {
    background: rgba(0, 0, 0, 0.1);
    transform: scale(1.1);
  }
  
  .menu-home:hover .initials {
    --clarity: 0.3;
  }
  
  .menu-home.active .initials {
    opacity: 1;
    font-weight: 900;
    --clarity: 1;
    color: var(--gray-900);
  }
  
  .menu-home.active .initials::before,
  .menu-home.active .initials::after {
    opacity: 0;
  }
  
  .initials {
    font-family: 'Roboto Mono', monospace;
    font-size: 14px;
    font-weight: 700;
    color: transparent;
    letter-spacing: 0.5px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    --clarity: 0.1;
  }
  
  .initials::before,
  .initials::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .initials::before {
    color: #ff0000;
    transform: translateX(calc(-0.04em * (1 - var(--clarity))));
    mix-blend-mode: multiply;
    opacity: calc(1 * (1 - var(--clarity)));
  }
  
  .initials::after {
    color: #00ffff;
    transform: translateX(calc(0.04em * (1 - var(--clarity))));
    mix-blend-mode: multiply;
    opacity: calc(1 * (1 - var(--clarity)));
  }
  
  .initials {
    color: rgba(0, 0, 0, 1);
    filter: contrast(1.2);
  }

  .menu-archive {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
  }
  
  .menu-archive:hover {
    background: rgba(0, 0, 0, 0.05);
    transform: scale(1.25);
  }
  
  .menu-archive.active {
    background: var(--gray-400);
    transform: scale(1.1);
  }
  
  .menu-archive.active .archive-icon {
    --clarity: 1;
    color: rgba(0, 0, 0, 0.9);
  }
  
  .menu-archive.active .archive-icon::before,
  .menu-archive.active .archive-icon::after {
    opacity: 0;
  }
  
  .archive-icon {
    font-size: 16px;
    color: transparent;
    opacity: 0.7;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    line-height: 1;
    position: relative;
    --clarity: 0.1;
  }
  
  .archive-icon::before,
  .archive-icon::after {
    content: attr(data-icon);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    font-family: 'Material Icons';
    font-size: inherit;
  }
  
  .archive-icon::before {
    color: #ff0000;
    transform: translateX(calc(-0.04em * (1 - var(--clarity))));
    mix-blend-mode: multiply;
    opacity: calc(1 * (1 - var(--clarity)));
  }
  
  .archive-icon::after {
    color: #00ffff;
    transform: translateX(calc(0.04em * (1 - var(--clarity))));
    mix-blend-mode: multiply;
    opacity: calc(1 * (1 - var(--clarity)));
  }
  
  .archive-icon {
    color: rgba(0, 0, 0, 1);
    filter: contrast(1.2);
  }
  
  .menu-archive:hover .archive-icon {
    opacity: 1;
    --clarity: 0.3;
  }
  
  .menu-numbers {
    display: flex;
    flex-direction: column;
    gap: 6px;
    align-items: center;
    --logmar-ratio: 1.25;
  }
  
  .menu-number {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: 50%;
    line-height: 1;
  }
  
  .menu-number:hover {
    background: rgba(0, 0, 0, 0.05);
    transform: scale(1.25);
  }
  
  .number {
    font-family: 'Roboto Mono', monospace;
    font-weight: 600;
    color: transparent;
    opacity: 0.7;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    --clarity: 0.1;
  }
  
  .number::before,
  .number::after {
    content: attr(data-number);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .number::before {
    color: #ff0000;
    transform: translateX(calc(-0.05em * (1 - var(--clarity))));
    mix-blend-mode: multiply;
    opacity: calc(1 * (1 - var(--clarity)));
  }
  
  .number::after {
    color: #00ffff;
    transform: translateX(calc(0.05em * (1 - var(--clarity))));
    mix-blend-mode: multiply;
    opacity: calc(1 * (1 - var(--clarity)));
  }
  
  .number {
    color: rgba(0, 0, 0, 1);
    filter: contrast(1.2);
  }
  
  .menu-number:hover .number {
    opacity: 1;
    --clarity: 0.3;
  }
  
  .menu-number.active .number {
    opacity: 1;
    font-weight: 700;
    --clarity: 1;
    color: rgba(0, 0, 0, 0.9);
  }
  
  .menu-number.active .number::before,
  .menu-number.active .number::after {
    opacity: 0;
  }
  
  .menu-number.active {
    background: var(--gray-400);
  }
  
