---
// Get user initials from the meta tag in Layout.astro
const initials = "NF"; // Based on "Nolan Figueroa" from the layout meta

// Selected works mapped to actual project slugs
const selectedWorks = [
  { number: 1, slug: "future-design" },
  { number: 2, slug: "ux-patterns" },
  { number: 3, slug: "spatial-interfaces" },
  { number: 4, slug: "design-systems-scale" },
  { number: 5, slug: "micro-interactions" }
];

// Get current page info for highlighting
const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';
const isArchivePage = currentPath === '/archive' || currentPath === '/archive/';
const isProjectPage = currentPath.startsWith('/projects/');
const currentProjectSlug = isProjectPage ? currentPath.split('/projects/')[1]?.replace('/', '') : null;
---

<div class="floating-menu">
  <a href="/" class={`menu-home ${isHomePage ? 'active' : ''}`}>
    <span class="initials">{initials}</span>
  </a>
  
  <nav class="menu-numbers">
    {selectedWorks.map((work) => (
      <a href={`/projects/${work.slug}`} class={`menu-number ${currentProjectSlug === work.slug ? 'active' : ''}`} data-number={work.number}>
        <span class="number">{work.number}</span>
      </a>
    ))}
  </nav>
  
  <a href="/archive" class={`menu-archive ${isArchivePage ? 'active' : ''}`}>
    <span class="material-icons archive-icon">folder</span>
  </a>
</div>

<!-- Separate Bottom Right Footer Toggle -->
<button class="footer-toggle" id="footerToggle">
  <span class="material-icons copyright-icon">copyright</span>
</button>

<style>
  .floating-menu {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 1000;
    background: rgba(25, 19, 20, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 16px 12px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
    border-radius: 9999px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
  }
  
  .floating-menu:hover {
    background: rgba(25, 19, 20, 1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }
  
  .menu-home {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
  }
  
  .menu-home:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.25);
  }
  
  .menu-home.active {
    background: #ecf95a;
    transform: scale(1.1);
  }
  
  .menu-home.active .initials {
    opacity: 1;
    font-weight: 900;
    color: #191314;
  }
  
  .initials {
    font-family: 'Roboto Mono', monospace;
    font-size: 16px;
    font-weight: 700;
    color: #ffffff;
    letter-spacing: 0.5px;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .menu-archive {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    text-decoration: none;
    border-radius: 50%;
    transition: all 0.3s ease;
  }
  
  .menu-archive:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.25);
  }
  
  .menu-archive.active {
    background: #ecf95a;
    transform: scale(1.1);
  }
  
  .menu-archive.active .archive-icon {
    color: #191314;
  }
  
  .archive-icon {
    font-size: 18px;
    color: #ffffff;
    opacity: 0.7;
    transition: all 0.3s ease;
    line-height: 1;
  }
  
  .menu-archive:hover .archive-icon {
    opacity: 1;
  }
  
  .menu-numbers {
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
  }
  
  .menu-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    text-decoration: none;
    transition: all 0.3s ease;
    border-radius: 50%;
    line-height: 1;
  }
  
  .menu-number:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.25);
  }
  
  .number {
    font-family: 'Roboto Mono', monospace;
    font-size: 14px;
    font-weight: 600;
    color: #ffffff;
    opacity: 0.7;
    transition: all 0.3s ease;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .menu-number:hover .number {
    opacity: 1;
  }
  
  .menu-number.active {
    background: #ecf95a;
    transform: scale(1.1);
  }
  
  .menu-number.active .number {
    opacity: 1;
    font-weight: 700;
    color: #191314;
  }
  
  .footer-toggle {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: rgba(25, 19, 20, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 50%;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .footer-toggle:hover {
    background: rgba(25, 19, 20, 1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    transform: translateY(-2px) scale(1.05);
  }
  
  .footer-toggle .copyright-icon {
    font-size: 18px;
    color: #ffffff;
    opacity: 0.8;
    transition: all 0.3s ease;
  }
  
  .footer-toggle:hover .copyright-icon {
    opacity: 1;
    transform: rotate(-15deg);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .floating-menu {
      top: 16px;
      left: 16px;
      padding: 12px 8px;
      gap: 10px;
    }
    
    .menu-home {
      width: 36px;
      height: 36px;
    }
    
    .initials {
      font-size: 14px;
    }
    
    .menu-archive {
      width: 36px;
      height: 36px;
    }
    
    .archive-icon {
      font-size: 16px;
    }
    
    .menu-number {
      width: 36px;
      height: 36px;
    }
    
    .number {
      font-size: 12px;
    }
    
    .footer-toggle {
      bottom: 16px;
      right: 16px;
      width: 44px;
      height: 44px;
    }
    
    .footer-toggle .copyright-icon {
      font-size: 16px;
    }
  }
  
</style>

<script>
  class FloatingMenu {
    constructor() {
      this.footerToggle = document.getElementById('footerToggle');
      this.initFooterToggle();
    }
    
    initFooterToggle() {
      if (this.footerToggle) {
        this.footerToggle.addEventListener('click', () => {
          // Scroll to bottom to reveal sticky footer
          window.scrollTo({
            top: document.documentElement.scrollHeight,
            behavior: 'smooth'
          });
        });
      }
    }
  }
  
  // Initialize when DOM loads
  document.addEventListener('DOMContentLoaded', () => {
    new FloatingMenu();
  });
</script>