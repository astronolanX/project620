  }

  .chat-message.ai {
    background: #e3f2fd;
    color: #1565c0;
    margin-right: 2rem;
  }

  .chat-message.user {
    background: #f3e5f5;
    color: #7b1fa2;
    margin-left: 2rem;
  }

  .config-demo img,
  .disclosure-demo {
    margin-top: 1rem;
    border-radius: 6px;
  }

  .setting-group {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 6px;
    margin-top: 1rem;
  }

  .basic-setting,
  .advanced-setting {
    padding: 0.5rem;
    margin: 0.25rem 0;
    font-size: 0.9rem;
  }

  .basic-setting {
    color: #22c55e;
  }

  .advanced-setting {
    color: #666;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .result-card {
    text-align: center;
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .result-card.positive {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.05), rgba(22, 163, 74, 0.05));
  }

  .result-value {
    font-size: 2.5rem;
    font-weight: 800;
    color: #16a34a;
    display: block;
    margin-bottom: 0.5rem;
  }

  .result-label {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .result-change {
    font-size: 0.8rem;
