  }

  .study-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .tag {
    padding: 0.3rem 0.8rem;
    background: rgba(0, 0, 0, 0.05);
    border-radius: 20px;
    font-size: 0.85rem;
    color: #666;
    font-weight: 500;
  }

  .study-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-link {
    color: #666;
    text-decoration: none;
    font-weight: 500;
