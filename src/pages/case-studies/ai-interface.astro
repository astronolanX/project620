    }

    .study-nav {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .solution-grid,
    .learning-list {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .case-study {
      padding: 2rem 1rem;
    }

    .results-grid,
    .problem-metrics {
      grid-template-columns: 1fr;
    }

    .chat-message.ai {
      margin-right: 0;
    }

    .chat-message.user {
      margin-left: 0;
    }
  }
</style>