---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import StickyFooter from '../../components/StickyFooter.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: project,
  }));
}

type Props = CollectionEntry<'projects'>;

const project = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.subject} - Classified Document`}>
  <div class="page-wrapper">
    <main class="portfolio-main">
      <!-- Project Header -->
      <header class="project-header">
        <div class="header-content">
          <span class="section-number">0{project.data.number}</span>
          <h1 class="project-title">{project.data.subject}</h1>
          <div class="geometric-accent">+</div>
        </div>
        <div class="project-meta">
          <span class="classification-badge">{project.data.classification}</span>
          <span class="department-badge">{project.data.department}</span>
          <span class="date-badge">{project.data.date}</span>
        </div>
      </header>

      <!-- Declassification Toggle -->
      <div class="declassify-section">
        <button id="declassify-toggle" class="declassify-btn">
          <span class="btn-text-classified">DECLASSIFY THIS PROJECT</span>
          <span class="btn-text-classified-active" style="display: none;">CLASSIFY THIS PROJECT</span>
        </button>
      </div>

      <!-- Project Content Card -->
      <div class="content-grid">
        <article class="content-card main-content card-variant-1">
          <div class="card-number">/{project.data.number}</div>
          <div class="card-pattern"></div>
          <div class="card-content">
            <div class="content-summary">
              <Content />
            </div>
            
            {project.data.distributionList && project.data.distributionList.length > 0 && (
              <div class="distribution-list">
                <strong>Distribution List:</strong>
                <ul>
                  {project.data.distributionList.map((recipient) => (
                    <li>{recipient}</li>
                  ))}
                </ul>
              </div>
            )}
          </div>
          <div class="card-decoration"></div>
        </article>

        <!-- Meta Information Card -->
        <aside class="content-card meta-card card-variant-2">
          <div class="card-number">META</div>
          <div class="card-pattern"></div>
          <div class="card-content">
            <h3 class="card-title">Project Details</h3>
            <div class="meta-item">
              <span class="meta-label">Reference:</span>
              <span class="meta-value">{project.data.reference}</span>
            </div>
            <div class="meta-item">
              <span class="meta-label">Location:</span>
              <span class="meta-value">Huntsville, AL 35801</span>
            </div>
            <div class="meta-item">
              <span class="meta-label">Status:</span>
              <span class="meta-value">ACTIVE</span>
            </div>
          </div>
          <div class="card-decoration"></div>
        </aside>

        <!-- Classification Card -->
        <aside class="content-card classification-card card-variant-4">
          <div class="card-number">SEC</div>
          <div class="card-pattern"></div>
          <div class="card-content">
            <h3 class="card-title">Security Notice</h3>
            <div class="classification-notice">
              <p>DO NOT CIRCULATE</p>
              <p>STORAGE & DESTROY</p>
              <div class="classification-stamp">{project.data.classification}</div>
            </div>
          </div>
          <div class="card-decoration"></div>
        </aside>
      </div>
    </main>

    <StickyFooter />
  </div>
</Layout>

<style>
  .page-wrapper {
    min-height: 100vh;
    background: #ffffff;
    margin-left: 88px;
    display: flex;
    flex-direction: column;
  }

  .portfolio-main {
    flex: 1;
    padding: 4rem 3rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  .project-header {
    margin-bottom: 3rem;
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .section-number {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 4rem;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.1);
    line-height: 1;
  }

  .project-title {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 2.5rem;
    font-weight: 900;
    color: #000;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    flex: 1;
  }

  .geometric-accent {
    font-family: 'Roboto Mono', monospace;
    font-size: 3rem;
    font-weight: 900;
    color: #c6ff00;
    line-height: 1;
  }

  .project-meta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .classification-badge,
  .department-badge,
  .date-badge {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 0.5rem 1rem;
    border: 1px solid #000;
    background: rgba(0, 0, 0, 0.05);
    color: #000;
  }

  .classification-badge {
    background: #000;
    color: #c6ff00;
    border-color: #000;
  }

  .department-badge {
    background: #c6ff00;
    color: #000;
    border-color: #000;
  }

  .declassify-section {
    margin-bottom: 3rem;
  }

  .declassify-btn {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 1rem 2rem;
    background: #c6ff00;
    color: #000;
    border: 2px solid #000;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .declassify-btn:hover {
    background: #000;
    color: #c6ff00;
    transform: translateY(-2px);
  }

  .declassify-btn.active {
    background: #000;
    color: #c6ff00;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    grid-auto-rows: min-content;
  }

  .content-card {
    position: relative;
    background: #ffffff;
    border: 2px solid #000;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
  }

  .content-card:hover {
    transform: translateY(-4px);
  }

  /* Card Variants */
  .card-variant-1 {
    background: #ffffff;
  }

  .card-variant-2 {
    background: #c6ff00;
  }

  .card-variant-4 {
    background: #000;
    color: #ffffff;
  }

  .card-variant-4 .card-title,
  .card-variant-4 .classification-notice,
  .card-variant-4 .classification-stamp {
    color: #ffffff;
  }

  .card-variant-2 .card-title,
  .card-variant-2 .meta-label,
  .card-variant-2 .meta-value {
    color: #000;
  }

  .card-number {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 2rem;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.1);
    line-height: 1;
    z-index: 3;
  }

  .card-variant-4 .card-number {
    color: rgba(255, 255, 255, 0.1);
  }

  .card-variant-2 .card-number {
    color: rgba(0, 0, 0, 0.2);
  }

  .card-pattern {
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    opacity: 0.1;
    z-index: 2;
  }

  /* Pattern Variants */
  .card-variant-1 .card-pattern {
    background: 
      linear-gradient(45deg, #000 25%, transparent 25%), 
      linear-gradient(-45deg, #000 25%, transparent 25%), 
      linear-gradient(45deg, transparent 75%, #000 75%), 
      linear-gradient(-45deg, transparent 75%, #000 75%);
    background-size: 15px 15px;
    background-position: 0 0, 0 7.5px, 7.5px -7.5px, -7.5px 0px;
  }

  .card-variant-2 .card-pattern {
    background: 
      repeating-linear-gradient(
        45deg,
        #000,
        #000 2px,
        transparent 2px,
        transparent 10px
      );
  }

  .card-variant-4 .card-pattern {
    background: 
      linear-gradient(90deg, #c6ff00 50%, transparent 50%),
      linear-gradient(#c6ff00 50%, transparent 50%);
    background-size: 8px 8px;
  }

  .card-content {
    padding: 3rem 2rem 2rem;
    flex: 1;
    position: relative;
    z-index: 2;
  }

  .card-title {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #000;
    margin: 0 0 1.5rem 0;
    text-transform: uppercase;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .content-summary {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.9rem;
    line-height: 1.6;
    color: #000;
  }

  .content-summary :global(h1),
  .content-summary :global(h2), 
  .content-summary :global(h3), 
  .content-summary :global(h4) {
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 700;
    color: #000;
    margin: 1.5rem 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: -0.01em;
  }

  .content-summary :global(p) {
    margin: 0 0 1rem 0;
  }

  .content-summary :global(ul),
  .content-summary :global(ol) {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .distribution-list {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 2px solid rgba(0, 0, 0, 0.1);
  }

  .distribution-list strong {
    font-family: 'Roboto Condensed', sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: -0.01em;
  }

  .distribution-list ul {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0 0;
  }

  .distribution-list li {
    padding: 0.25rem 0;
  }

  .meta-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .meta-item:last-child {
    border-bottom: none;
  }

  .meta-label {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #666;
  }

  .meta-value {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.8rem;
    font-weight: 500;
    color: #000;
  }

  .classification-notice {
    text-align: center;
  }

  .classification-notice p {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0.5rem 0;
    color: inherit;
  }

  .classification-stamp {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 1.5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin-top: 1rem;
    padding: 1rem;
    border: 2px solid currentColor;
    text-align: center;
  }

  .card-decoration {
    position: absolute;
    bottom: 1.5rem;
    right: 1.5rem;
    width: 30px;
    height: 30px;
    border: 2px solid #000;
    z-index: 3;
  }

  .card-variant-4 .card-decoration {
    border-color: #c6ff00;
  }

  .card-variant-2 .card-decoration {
    background: #000;
  }

  .main-content {
    grid-row: span 2;
  }

  /* Responsive Design */
  @media (max-width: 1000px) {
    .content-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .main-content {
      grid-row: span 1;
    }
  }

  @media (max-width: 768px) {
    .page-wrapper {
      margin-left: 72px;
    }

    .portfolio-main {
      padding: 2rem 1.5rem;
      margin-left: 0;
    }

    .section-number {
      font-size: 3rem;
    }

    .project-title {
      font-size: 1.75rem;
    }

    .geometric-accent {
      font-size: 2rem;
    }

    .header-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .project-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .card-content {
      padding: 2rem 1.5rem 1.5rem;
    }

    .card-number {
      font-size: 1.5rem;
      top: 1rem;
      left: 1rem;
    }
  }

  @media (max-width: 480px) {
    .portfolio-main {
      padding: 1.5rem 1rem;
      margin-left: 0;
    }

    .project-title {
      font-size: 1.5rem;
    }

    .section-number {
      font-size: 2.5rem;
    }

    .card-content {
      padding: 1.5rem 1rem 1rem;
    }

    .content-summary {
      font-size: 0.85rem;
    }
  }
</style>

<script>
  // Declassify toggle functionality
  document.addEventListener('astro:page-load', function() {
    const declassifyBtn = document.getElementById('declassify-toggle');
    const classifiedText = document.querySelector('.btn-text-classified');
    const classifiedActiveText = document.querySelector('.btn-text-classified-active');
    
    if (declassifyBtn && classifiedText && classifiedActiveText) {
      declassifyBtn.addEventListener('click', function() {
        declassifyBtn.classList.toggle('active');
        
        if (declassifyBtn.classList.contains('active')) {
          (classifiedText as HTMLElement).style.display = 'none';
          (classifiedActiveText as HTMLElement).style.display = 'inline';
        } else {
          (classifiedText as HTMLElement).style.display = 'inline';
          (classifiedActiveText as HTMLElement).style.display = 'none';
        }
      });
    }
  });
</script>