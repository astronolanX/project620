---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import StickyFooter from '../../components/StickyFooter.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: project,
  }));
}

type Props = CollectionEntry<'projects'>;

const project = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.subject} - Classified Document`}>
  <div class="document-wrapper" data-project={project.data.number}>
    
    <!-- Page Number Header -->
    <div class="page-number-header">
      <span class="page-number">/{project.data.number}</span>
    </div>
    
    <!-- Redaction Toggle - Top Right -->
    <div class="redaction-toggle-container">
      <button id="redaction-toggle" class="eye-toggle" aria-label="Toggle redaction">
        <span class="eye-icon closed">üëÅÔ∏è‚Äçüó®Ô∏è</span>
        <span class="eye-icon open">üëÅÔ∏è</span>
      </button>
    </div>

    <!-- Document Header -->
    <header class="document-header">
      <div class="header-classification">
        <span class="classification-level">{project.data.classification}</span>
      </div>
      <div class="document-meta">
        <div class="date">{project.data.date}</div>
        <div class="reference">{project.data.reference}</div>
      </div>
      <div class="header-info">
        <div class="department">{project.data.department}</div>
        <div class="location">Huntsville, AL 35801</div>
      </div>
    </header>

    <!-- Document Content -->
    <main class="document-content">
      <div class="subject-line">
        <strong>SUBJECT:</strong> {project.data.subject}
      </div>
      
      <div class="content-body">
        <Content />
      </div>

      {project.data.distributionList && project.data.distributionList.length > 0 && (
        <div class="distribution-list">
          <strong>Distribution List:</strong>
          <ul>
            {project.data.distributionList.map((recipient) => (
              <li>{recipient}</li>
            ))}
          </ul>
        </div>
      )}
    </main>

    <!-- Document Footer -->
    <footer class="document-footer">
      <div class="footer-left">DO NOT CIRCULATE</div>
      <div class="footer-right">STORAGE & DESTROY</div>
      <div class="footer-classification">
        <span class="classification-level">{project.data.classification}</span>
      </div>
    </footer>

    <StickyFooter />
  </div>
</Layout>

<style>
  .document-wrapper {
    min-height: 100vh;
    margin-left: 80px;
    font-family: 'Roboto Mono', monospace;
    color: #000;
    max-width: 60ch;
    padding: 8rem 3rem 4rem; /* Increased top padding to make room for page number */
    background: 
      radial-gradient(circle at 20% 80%, rgba(0,0,0,0.01) 0%, transparent 20%),
      radial-gradient(circle at 80% 20%, rgba(0,0,0,0.01) 0%, transparent 20%),
      linear-gradient(90deg, transparent 0%, rgba(0,0,0,0.005) 50%, transparent 100%);
    position: relative;
    line-height: 1.6;
  }


  /* Eye Toggle - Top Right */
  .redaction-toggle-container {
    position: fixed;
    top: 2rem;
    right: 2rem;
    z-index: 100;
  }

  .eye-toggle {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .eye-toggle:hover {
    background: rgba(0, 0, 0, 0.1);
  }

  .eye-icon {
    display: block;
    transition: opacity 0.2s ease;
  }

  .document-wrapper:not(.declassified) .eye-icon.open {
    display: none;
  }

  .document-wrapper.declassified .eye-icon.closed {
    display: none;
  }

  /* Page Number Header */
  .page-number-header {
    position: fixed;
    top: 2rem;
    left: 100px; /* 80px nav width + 20px margin */
    z-index: 200;
  }

  .page-number {
    font-family: 'Roboto', sans-serif;
    font-size: 4rem;
    font-weight: 900;
    font-style: italic;
    color: #fff;
    background: #333;
    padding: 0.5rem 1rem;
    display: inline-block;
    letter-spacing: -0.05em;
    line-height: 1;
  }

  /* Header Styles */
  .document-header {
    margin-bottom: 4rem;
    text-align: left;
  }

  .header-classification {
    margin-bottom: 3rem;
  }

  .classification-level {
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    background: #000;
    color: #fff;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    display: inline-block;
    margin-bottom: 2rem;
    position: relative;
    box-shadow: 0 0 0 1px rgba(0,0,0,0.1);
  }

  .classification-level::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 30% 40%, rgba(255,255,255,0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 60%, rgba(255,255,255,0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .document-meta {
    margin-bottom: 2rem;
    font-size: 0.875rem;
    font-weight: 400;
    display: flex;
    gap: 2rem;
  }

  .document-meta .date,
  .document-meta .reference {
    color: #666;
  }

  .header-info {
    margin-bottom: 2rem;
  }

  .header-info .department {
    font-weight: 500;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    color: #000;
  }

  .header-info .location {
    font-size: 0.875rem;
    color: #666;
    font-weight: 400;
  }

  /* Content Styles */
  .document-content {
    text-align: left;
    font-size: 0.9375rem;
    font-weight: 400;
    line-height: 1.7;
  }

  .subject-line {
    margin-bottom: 3rem;
    font-size: 0.9375rem;
    font-weight: 500;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .subject-line strong {
    font-weight: 600;
    margin-right: 1rem;
  }

  .content-body {
    margin-bottom: 3rem;
  }

  .content-body h1, 
  .content-body h2, 
  .content-body h3, 
  .content-body h4 {
    font-family: 'Roboto Mono', monospace;
    font-weight: 500;
    font-size: 0.9375rem;
    margin: 2.5rem 0 1.25rem 0;
    text-transform: none;
    color: #000;
  }

  .content-body p {
    margin: 1.5rem 0;
    line-height: 1.7;
  }

  .content-body ol, 
  .content-body ul {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .content-body li {
    margin: 1rem 0;
    line-height: 1.7;
  }

  .content-body strong {
    font-weight: 600;
  }

  /* Enhanced Redaction Styles - Varied Patterns */
  .redacted {
    background: #000;
    color: #000;
    padding: 0.1em 0.2em;
    display: inline;
    transition: all 0.3s ease;
    position: relative;
    border-radius: 0;
    margin: 0 0.1em;
  }

  .redacted-block {
    background: #000;
    color: #000;
    font-family: 'Roboto Mono', monospace;
    line-height: 1.6;
    margin: 2rem 0;
    padding: 1.5rem;
    transition: all 0.3s ease;
    min-height: 6rem;
    display: block;
    white-space: pre;
    border-radius: 0;
  }

  /* Varied redaction patterns */
  .redacted-line {
    background: #000;
    color: #000;
    display: inline-block;
    height: 1.2em;
    margin: 0.1em 0;
    transition: all 0.3s ease;
  }

  .redacted-short { width: 3ch; }
  .redacted-medium { width: 8ch; }
  .redacted-long { width: 15ch; }
  .redacted-extra-long { width: 25ch; }

  .redacted-paragraph {
    background: #000;
    color: #000;
    display: block;
    margin: 1em 0;
    padding: 0.5em 0;
    min-height: 4em;
    transition: all 0.3s ease;
  }

  .redacted-stagger {
    display: block;
    margin: 1em 0;
  }

  .redacted-stagger .redacted-line {
    display: block;
    margin: 0.2em 0;
  }

  .redacted-stagger .redacted-line:nth-child(1) { width: 80%; }
  .redacted-stagger .redacted-line:nth-child(2) { width: 65%; margin-left: 2ch; }
  .redacted-stagger .redacted-line:nth-child(3) { width: 90%; }
  .redacted-stagger .redacted-line:nth-child(4) { width: 45%; margin-left: 4ch; }
  .redacted-stagger .redacted-line:nth-child(5) { width: 75%; margin-left: 1ch; }
  .redacted-stagger .redacted-line:nth-child(6) { width: 55%; margin-left: 3ch; }

  .redacted-geometric {
    display: block;
    margin: 2em 0;
  }

  .redacted-geometric .redacted-line {
    display: block;
    margin: 0.15em 0;
    height: 1.4em;
  }

  .redacted-geometric .redacted-line:nth-child(1) { width: 100%; }
  .redacted-geometric .redacted-line:nth-child(2) { width: 85%; }
  .redacted-geometric .redacted-line:nth-child(3) { width: 95%; }
  .redacted-geometric .redacted-line:nth-child(4) { width: 60%; }
  .redacted-geometric .redacted-line:nth-child(5) { width: 88%; }
  .redacted-geometric .redacted-line:nth-child(6) { width: 40%; }
  .redacted-geometric .redacted-line:nth-child(7) { width: 92%; }

  /* Document-specific variations */
  [data-project="1"] .redacted-geometric .redacted-line:nth-child(even) { 
    margin-left: 1ch; 
  }

  [data-project="2"] .redacted-stagger .redacted-line:nth-child(odd) { 
    margin-left: 0.5ch; 
  }

  [data-project="3"] .redacted-geometric .redacted-line { 
    height: 1.2em; 
    margin: 0.1em 0;
  }

  /* Declassified state */
  .document-wrapper.declassified .redacted,
  .document-wrapper.declassified .redacted-line,
  .document-wrapper.declassified .redacted-block,
  .document-wrapper.declassified .redacted-paragraph {
    background: transparent;
    color: #000;
  }

  .distribution-list {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e0e0e0;
    font-size: 0.875rem;
  }

  .distribution-list strong {
    font-weight: 600;
    margin-bottom: 1rem;
    display: block;
  }

  .distribution-list ul {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .distribution-list li {
    font-weight: 400;
    text-transform: uppercase;
    font-size: 0.8125rem;
    margin: 0.5rem 0;
    letter-spacing: 0.05em;
  }

  .document-footer {
    border-top: 1px solid #e0e0e0;
    padding: 2rem 0 1rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 4rem;
    position: relative;
    color: #666;
  }

  .footer-left,
  .footer-right {
    flex: 1;
  }

  .footer-right {
    text-align: right;
  }

  .footer-classification {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  .footer-classification .classification-level {
    background: transparent;
    color: #666;
    font-size: 0.75rem;
    border: none;
    padding: 0;
    letter-spacing: 0.2em;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .document-wrapper {
      margin-left: 64px;
      max-width: 100%;
      padding: 6rem 1.5rem 2rem; /* Increased top padding for mobile */
    }

    .page-number-header {
      top: 1rem;
      left: 84px; /* 64px mobile nav width + 20px margin */
    }

    .page-number {
      font-size: 3rem;
      padding: 0.4rem 0.8rem;
    }

    .redaction-toggle-container {
      top: 1rem;
      right: 1rem;
    }

    .eye-toggle {
      font-size: 1.25rem;
      padding: 0.4rem;
    }
    
    .header-classification {
      margin-bottom: 2rem;
    }

    .classification-level {
      margin-bottom: 1.5rem;
    }

    .document-header {
      margin-bottom: 3rem;
    }

    .document-meta {
      flex-direction: column;
      gap: 0.5rem;
    }

    .subject-line {
      margin-bottom: 2rem;
    }

    .content-body h1, 
    .content-body h2, 
    .content-body h3, 
    .content-body h4 {
      margin: 2rem 0 1rem 0;
    }

    .document-footer {
      padding: 1.5rem 0 0.5rem 0;
      flex-direction: column;
      gap: 0.75rem;
      text-align: center;
      margin-top: 3rem;
    }

    .footer-left,
    .footer-right {
      text-align: center;
    }

    .footer-classification {
      position: static;
      transform: none;
      margin-top: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .document-wrapper {
      margin-left: 64px;
      padding: 5rem 1rem 1.5rem; /* Increased top padding for small mobile */
    }

    .page-number {
      font-size: 2.5rem;
      padding: 0.3rem 0.6rem;
    }

    .classification-level {
      font-size: 0.8125rem;
      padding: 0.2rem 0.4rem;
    }

    .content-body {
      font-size: 0.875rem;
    }

    .redacted-block {
      padding: 1rem;
      min-height: 4rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('redaction-toggle');
    const documentWrapper = document.querySelector('.document-wrapper');
    
    if (toggleButton && documentWrapper) {
      toggleButton.addEventListener('click', () => {
        documentWrapper.classList.toggle('declassified');
      });
    }
  });
</script>