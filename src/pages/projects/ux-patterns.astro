    transition: all 0.3s ease;
  }

  .demo-button:hover .heart-icon {
    color: #ff6b6b;
    transform: scale(1.2);
  }

  .skeleton-loader {
    height: 16px;
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: loading 1.5s infinite;
    border-radius: 4px;
    margin: 0.5rem 0;
    width: 80%;
  }

  .skeleton-loader.short {
    width: 60%;
  }

  .skeleton-loader.medium {
    width: 40%;
  }

  @keyframes loading {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  .swipe-indicator {
    text-align: center;
  }

  .swipe-dots {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .dot {
    width: 8px;
    height: 8px;
    background: #ccc;
    border-radius: 50%;
    transition: background 0.3s ease;
  }

  .dot.active {
    background: #3366FF;
  }

  .swipe-hint {
    font-size: 0.8rem;
    color: #666;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .pattern-card h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
  }

