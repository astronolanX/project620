  .media-caption {
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
    margin-top: 1rem;
  }

  .pattern-category {
    margin: 4rem 0;
  }

  .pattern-category h2 {
    font-size: clamp(1.8rem, 4vw, 2.2rem);
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: black;
  }

  .pattern-category > p {
    color: #666;
    margin-bottom: 2rem;
  }

  .pattern-examples {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .pattern-card {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    padding: 2rem;
    background: rgba(0, 0, 0, 0.01);
  }

  .pattern-demo {
    height: 120px;
    background: #f8f9fa;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .demo-button {
    padding: 0.75rem 1.5rem;
    background: #3366FF;
    color: white;
    border: none;
    border-radius: 25px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .demo-button:hover {
    transform: scale(1.05);
    background: #2557d6;
  }

