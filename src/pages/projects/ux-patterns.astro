  .concept-type {
    color: #888;
    font-size: 0.9rem;
    padding: 0.3rem 0.8rem;
    background: rgba(0, 0, 0, 0.05);
    border-radius: 20px;
  }

  .concept-header h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    margin-bottom: 1rem;
    color: black;
    line-height: 1.2;
    text-shadow: 
      -0.08em 0 #ff3333,
      0.08em 0 #33ccff,
      -0.12em 0 rgba(255, 51, 51, 0.8),
      0.12em 0 rgba(51, 204, 255, 0.8);
  }

  .concept-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.4rem);
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .concept-content {
    line-height: 1.8;
    font-size: clamp(1rem, 2vw, 1.1rem);
  }

