---
import Layout from '../layouts/Layout.astro';
import StickyFooter from '../components/StickyFooter.astro';

// Archive items with Unsplash images
const archiveItems = [
  {
    title: "Experimental Typography",
    image: "https://images.unsplash.com/photo-1618005198919-d3d4b5a92ead?w=800&auto=format&fit=crop",
    size: "large"
  },
  {
    title: "Color Psychology",
    image: "https://images.unsplash.com/photo-1561070791-2526d30994b5?w=600&auto=format&fit=crop",
    size: "medium"
  },
  {
    title: "Remote Collaboration",
    image: "https://images.unsplash.com/photo-1600880292203-757bb62b4baf?w=600&auto=format&fit=crop",
    size: "small"
  },
  {
    title: "Voice UI",
    image: "https://images.unsplash.com/photo-1589254065878-42c9da997008?w=600&auto=format&fit=crop",
    size: "medium"
  },
  {
    title: "Generative Art",
    image: "https://images.unsplash.com/photo-1634017839464-5c339ebe3cb4?w=800&auto=format&fit=crop",
    size: "large"
  },
  {
    title: "Sustainable Design",
    image: "https://images.unsplash.com/photo-1569163139394-de4798aa62b6?w=600&auto=format&fit=crop",
    size: "small"
  },
  {
    title: "Mobile First",
    image: "https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?w=600&auto=format&fit=crop",
    size: "medium"
  },
  {
    title: "Data Visualization",
    image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&auto=format&fit=crop",
    size: "medium"
  },
  {
    title: "AR Experiments",
    image: "https://images.unsplash.com/photo-1593508512255-86ab42a8e620?w=800&auto=format&fit=crop",
    size: "large"
  },
  {
    title: "Design Systems",
    image: "https://images.unsplash.com/photo-1561736778-92e52a7769ef?w=600&auto=format&fit=crop",
    size: "small"
  }
];
---

<Layout title="Archive - Nolan Figueroa">
  <div class="page-wrapper">
    <main class="portfolio-main">
      <!-- Archive Header -->
      <header class="archive-header">
        <div class="header-content">
          <span class="section-number">02</span>
          <h1 class="archive-title">Archive</h1>
          <div class="geometric-accent">+</div>
        </div>
        <p class="archive-subtitle">A collection of past experiments, thoughts, and explorations</p>
      </header>

      <!-- Archive Grid -->
      <div class="archive-grid">
        {archiveItems.map((item, index) => {
          const cardNumber = String(index + 1).padStart(2, '0');
          const cardVariant = (index % 4) + 1;
          return (
            <article class={`archive-card card-variant-${cardVariant} ${item.size}`}>
              <div class="card-number">{cardNumber}</div>
              <div class="card-pattern"></div>
              <div class="card-image">
                <img src={item.image} alt={item.title} loading="lazy" />
              </div>
              <div class="card-content">
                <h3 class="card-title">{item.title}</h3>
              </div>
              <div class="card-decoration"></div>
            </article>
          );
        })}
      </div>
    </main>

    <StickyFooter />
  </div>
</Layout>

<style>
  .page-wrapper {
    min-height: 100vh;
    background: #ffffff;
    margin-left: 88px;
    display: flex;
    flex-direction: column;
  }

  .portfolio-main {
    flex: 1;
    padding: 4rem 3rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  .archive-header {
    margin-bottom: 4rem;
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
  }

  .section-number {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 4rem;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.1);
    line-height: 1;
  }

  .archive-title {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 3rem;
    font-weight: 900;
    color: #000;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .geometric-accent {
    font-family: 'Roboto Mono', monospace;
    font-size: 3rem;
    font-weight: 900;
    color: #c6ff00;
    line-height: 1;
    margin-left: auto;
  }

  .archive-subtitle {
    font-family: 'Roboto', sans-serif;
    font-size: 1.2rem;
    font-weight: 400;
    color: #000;
    line-height: 1.5;
    margin: 0;
    max-width: 700px;
  }

  .archive-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    grid-auto-rows: minmax(250px, auto);
  }

  .archive-card {
    position: relative;
    background: #ffffff;
    border: 2px solid #000;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
  }

  .archive-card:hover {
    transform: translateY(-4px);
  }

  /* Card Variants */
  .card-variant-1 {
    background: #ffffff;
  }

  .card-variant-2 {
    background: #c6ff00;
  }

  .card-variant-3 {
    background: #e6e6e6;
  }

  .card-variant-4 {
    background: #000;
    color: #ffffff;
  }

  .card-variant-4 .card-title {
    color: #ffffff;
  }

  .card-variant-2 .card-title {
    color: #000;
  }

  .card-number {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 2.5rem;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.1);
    line-height: 1;
    z-index: 3;
  }

  .card-variant-4 .card-number {
    color: rgba(255, 255, 255, 0.1);
  }

  .card-variant-2 .card-number {
    color: rgba(0, 0, 0, 0.2);
  }

  .card-pattern {
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    opacity: 0.1;
    z-index: 2;
  }

  /* Pattern Variants */
  .card-variant-1 .card-pattern {
    background: 
      linear-gradient(45deg, #000 25%, transparent 25%), 
      linear-gradient(-45deg, #000 25%, transparent 25%), 
      linear-gradient(45deg, transparent 75%, #000 75%), 
      linear-gradient(-45deg, transparent 75%, #000 75%);
    background-size: 15px 15px;
    background-position: 0 0, 0 7.5px, 7.5px -7.5px, -7.5px 0px;
  }

  .card-variant-2 .card-pattern {
    background: 
      repeating-linear-gradient(
        45deg,
        #000,
        #000 2px,
        transparent 2px,
        transparent 10px
      );
  }

  .card-variant-3 .card-pattern {
    background: 
      radial-gradient(circle at 50% 50%, #000 2px, transparent 2px);
    background-size: 12px 12px;
  }

  .card-variant-4 .card-pattern {
    background: 
      linear-gradient(90deg, #c6ff00 50%, transparent 50%),
      linear-gradient(#c6ff00 50%, transparent 50%);
    background-size: 8px 8px;
  }

  .card-image {
    position: relative;
    overflow: hidden;
    flex: 1;
    z-index: 1;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .archive-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
    background: inherit;
    position: relative;
    z-index: 2;
    border-top: 2px solid #000;
  }

  .card-title {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    color: #000;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .card-decoration {
    position: absolute;
    bottom: 1.5rem;
    right: 1.5rem;
    width: 30px;
    height: 30px;
    border: 2px solid #000;
    z-index: 3;
  }

  .card-variant-4 .card-decoration {
    border-color: #c6ff00;
  }

  .card-variant-2 .card-decoration {
    background: #000;
  }

  /* Size variants for masonry effect */
  .archive-card.large {
    grid-row: span 2;
  }

  .archive-card.medium {
    /* Default single row span */
  }

  .archive-card.small {
    /* Default single row span, could be modified */
  }

  /* Featured positioning */
  .archive-card:nth-child(1) {
    grid-column: span 2;
  }

  .archive-card:nth-child(5) {
    grid-column: span 2;
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .archive-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }
    
    .archive-card:nth-child(1),
    .archive-card:nth-child(5) {
      grid-column: span 1;
    }
  }

  @media (max-width: 768px) {
    .page-wrapper {
      margin-left: 72px;
    }

    .portfolio-main {
      padding: 2rem 1.5rem;
      margin-left: 0;
    }

    .section-number {
      font-size: 3rem;
    }

    .archive-title {
      font-size: 2rem;
    }

    .geometric-accent {
      font-size: 2rem;
    }

    .archive-subtitle {
      font-size: 1.1rem;
    }

    .archive-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .archive-card:nth-child(1),
    .archive-card:nth-child(5) {
      grid-column: span 1;
    }

    .archive-card.large {
      grid-row: span 1;
    }

    .card-content {
      padding: 1rem;
    }

    .card-number {
      font-size: 2rem;
      top: 1rem;
      left: 1rem;
    }

    .card-title {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .portfolio-main {
      padding: 1.5rem 1rem;
      margin-left: 0;
    }

    .header-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .geometric-accent {
      margin-left: 0;
    }

    .archive-title {
      font-size: 1.75rem;
    }

    .section-number {
      font-size: 2.5rem;
    }

    .card-content {
      padding: 0.75rem;
    }
  }
</style>