<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Generative Art Controls
    const complexitySlider = document.getElementById('complexity');
    const speedSlider = document.getElementById('speed');
    const colorModeSelect = document.getElementById('colorMode');
    const regenerateBtn = document.getElementById('regenerate');
    const canvas = document.getElementById('generative-canvas');
    
    if (canvas) {
      const ctx = canvas.getContext('2d');
      let animationId;
      let time = 0;
      
      function draw() {
        const complexity = parseInt(complexitySlider?.value || 5);
        const speed = parseFloat(speedSlider?.value || 1);
        const colorMode = colorModeSelect?.value || 'rainbow';
        
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        
        for (let i = 0; i < complexity * 20; i++) {
          const x = (Math.sin(time * speed + i * 0.1) * 150) + canvas.width / 2;
          const y = (Math.cos(time * speed * 0.8 + i * 0.15) * 100) + canvas.height / 2;
          
          let hue;
          switch(colorMode) {
            case 'monochrome':
              hue = 0;
              ctx.fillStyle = `hsl(0, 0%, ${50 + Math.sin(time + i) * 30}%)`;
              break;
            case 'warm':
              hue = (Math.sin(time + i) * 30) + 30;
              ctx.fillStyle = `hsl(${hue}, 70%, 60%)`;
              break;
            case 'cool':
              hue = (Math.sin(time + i) * 60) + 180;
              ctx.fillStyle = `hsl(${hue}, 70%, 60%)`;
              break;
            default: // rainbow
              hue = (time * 50 + i * 10) % 360;
              ctx.fillStyle = `hsl(${hue}, 70%, 60%)`;
          }
          
          const size = (Math.sin(time * 2 + i * 0.2) + 1) * complexity;
          ctx.beginPath();
          ctx.arc(x, y, Math.max(1, size), 0, Math.PI * 2);
          ctx.fill();
        }
        
        time += 0.02;
        animationId = requestAnimationFrame(draw);
      }
      
      function startAnimation() {
        if (animationId) cancelAnimationFrame(animationId);
        draw();
      }
      
      // Event listeners
      [complexitySlider, speedSlider, colorModeSelect].forEach(element => {
        if (element) {
          element.addEventListener('input', startAnimation);
        }
      });
      
      if (regenerateBtn) {
        regenerateBtn.addEventListener('click', () => {
          time = Math.random() * 100;
          startAnimation();
        });
      }
      
      // Start initial animation
      startAnimation();
    }
    
    // Simple SVG animation for flow chart
    const flowChart = document.getElementById('flow-chart');
    if (flowChart) {
      // Add some animated circles to represent data flow
      for (let i = 0; i < 20; i++) {
        const circle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
        circle.setAttribute('cx', Math.random() * 300);
        circle.setAttribute('cy', Math.random() * 200);
        circle.setAttribute('r', Math.random() * 5 + 2);
        circle.setAttribute('fill', `hsl(${Math.random() * 360}, 70%, 60%)`);
        circle.setAttribute('opacity', '0.7');
        
        const animateX = document.createElementNS('http://www.w3.org/2000/svg', 'animateTransform');
        animateX.setAttribute('attributeName', 'transform');
        animateX.setAttribute('type', 'translate');
        animateX.setAttribute('values', `0,0; ${Math.random() * 50 - 25},${Math.random() * 50 - 25}; 0,0`);
        animateX.setAttribute('duration', `${2 + Math.random() * 3}s`);
        animateX.setAttribute('repeatCount', 'indefinite');
        
        circle.appendChild(animateX);
        flowChart.appendChild(circle);
      }
    }
    
    // Network graph canvas animation
    const networkCanvas = document.getElementById('network-graph');
    if (networkCanvas) {
      const ctx = networkCanvas.getContext('2d');
      const nodes = [];
      
      // Create nodes
      for (let i = 0; i < 15; i++) {
        nodes.push({
          x: Math.random() * networkCanvas.width,
          y: Math.random() * networkCanvas.height,
          vx: (Math.random() - 0.5) * 2,
          vy: (Math.random() - 0.5) * 2,
          radius: Math.random() * 5 + 3
        });
      }
      
      function drawNetwork() {
        ctx.clearRect(0, 0, networkCanvas.width, networkCanvas.height);
        
        // Draw connections
        ctx.strokeStyle = 'rgba(51, 102, 255, 0.2)';
        ctx.lineWidth = 1;
        for (let i = 0; i < nodes.length; i++) {
          for (let j = i + 1; j < nodes.length; j++) {
            const dx = nodes[i].x - nodes[j].x;
            const dy = nodes[i].y - nodes[j].y;
            const distance = Math.sqrt(dx * dx + dy * dy);
            
            if (distance < 80) {
              ctx.beginPath();
              ctx.moveTo(nodes[i].x, nodes[i].y);
              ctx.lineTo(nodes[j].x, nodes[j].y);
              ctx.stroke();
            }
          }
        }
        
        // Draw and update nodes
        ctx.fillStyle = 'rgba(51, 102, 255, 0.7)';
        nodes.forEach(node => {
          // Update position
          node.x += node.vx;
          node.y += node.vy;
          
          // Bounce off edges
          if (node.x < 0 || node.x > networkCanvas.width) node.vx *= -1;
          if (node.y < 0 || node.y > networkCanvas.height) node.vy *= -1;
          
          // Keep in bounds
          node.x = Math.max(0, Math.min(networkCanvas.width, node.x));
          node.y = Math.max(0, Math.min(networkCanvas.height, node.y));
          
          // Draw node
          ctx.beginPath();
          ctx.arc(node.x, node.y, node.radius, 0, Math.PI * 2);
          ctx.fill();
        });
        
        requestAnimationFrame(drawNetwork);
      }
      
      drawNetwork();
    }
  });
</script>