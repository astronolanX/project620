---
import Layout from '../layouts/Layout.astro';
import StickyFooter from '../components/StickyFooter.astro';
---

<Layout title="Nolan Figueroa - Design & Technology">
  <div class="page-wrapper">
    <main class="portfolio-main">
      <!-- Grid pattern is now visible -->
    </main>

    <StickyFooter />
  </div>
</Layout>

<style>
  .page-wrapper {
    min-height: 100vh;
    background: #e5e5e5;
    margin-left: 80px; /* Space for left nav menu */
    display: flex;
    flex-direction: column;
  }

  .portfolio-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-wrapper {
      margin-left: 0;
    }

    .portfolio-main {
      padding: 1rem;
      margin-left: 64px;
    }
  }

  @media (max-width: 480px) {
    .portfolio-main {
      padding: 0.75rem;
      margin-left: 64px;
    }
  }

  @media (max-width: 320px) {
    .portfolio-main {
      padding: 0.5rem;
      margin-left: 64px;
    }
  }
</style>