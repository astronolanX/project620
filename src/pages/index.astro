<script>
  class SPAController {
    private currentSection: string;
    
    constructor() {
      this.currentSection = 'home';
      this.setupEventListeners();
      
      // Set initial state
      this.showSection('home');
      
      // Listen for custom events from FloatingMenu
      document.addEventListener('spa-navigate', (e: Event) => {
        this.navigateToSection((e as CustomEvent).detail.section);
      });
    }
    
    setupEventListeners() {
      // Handle browser back/forward
      window.addEventListener('popstate', (e) => {
        const section = e.state?.section || 'home';
        this.showSection(section, false);
      });
      
      // Handle initial page state
      const initialSection = this.getSectionFromURL();
      if (initialSection !== 'home') {
        this.showSection(initialSection, false);
      }
    }
    
    getSectionFromURL() {
      const hash = window.location.hash.substring(1);
      if (hash && document.getElementById(`content-${hash}`)) {
        return hash;
      }
      return 'home';
    }
    
    navigateToSection(section: string) {
      if (section === this.currentSection) return;
      
      this.showSection(section, true);
    }
    
    showSection(section: string, updateHistory = true) {
      if (section === this.currentSection) return;
      
      const targetSection = document.getElementById(`content-${section}`);
      if (!targetSection) return;
      
      // Hide current section with fade out
      const currentSection = document.getElementById(`content-${this.currentSection}`);
      if (currentSection) {
        currentSection.classList.remove('active');
      }
      
      // Show new section after a brief delay for smooth transition
      setTimeout(() => {
        targetSection.classList.add('active');
      }, currentSection ? 100 : 0);
      
      this.currentSection = section;
      
      // Update URL if needed
      if (updateHistory) {
        const url = section === 'home' ? '/' : `/#${section}`;
        window.history.pushState({ section }, '', url);
      }
      
      // Scroll to top smoothly
      window.scrollTo({ top: 0, behavior: 'smooth' });
      
      // Dispatch event for FloatingMenu to update its state
      document.dispatchEvent(new CustomEvent('spa-section-changed', {
        detail: { section }
      }));
    }
  }
  
  // Initialize SPA controller when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    new SPAController();
  });
</script>