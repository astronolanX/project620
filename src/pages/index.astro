---
import Layout from '../layouts/Layout.astro';
import StickyFooter from '../components/StickyFooter.astro';
---

<Layout title="Nolan Figueroa - Design & Technology">
  <div class="page-wrapper">
    <main class="portfolio-main">
      <!-- Blur effect title -->
      <div class="blur-title-section">
        <div class="blur-container">
          <!-- Shadow layer 5 (most blurred, furthest back) -->
          <div class="text-layer text-shadow-5">
            <div class="top">hoist the</div>
            <div class="bottom">colors</div>
          </div>

          <!-- Shadow layer 4 -->
          <div class="text-layer text-shadow-4">
            <div class="top">hoist the</div>
            <div class="bottom">colors</div>
          </div>
          
          <!-- Shadow layer 3 -->
          <div class="text-layer text-shadow-3">
            <div class="top">hoist the</div>
            <div class="bottom">colors</div>
          </div>
          
          <!-- Shadow layer 2 -->
          <div class="text-layer text-shadow-2">
            <div class="top">hoist the</div>
            <div class="bottom">colors</div>
          </div>
          
          <!-- Shadow layer 1 (least blurred) -->
          <div class="text-layer text-shadow-1">
            <div class="top">hoist the</div>
            <div class="bottom">colors</div>
          </div>
          
          <!-- Main text (sharp and bold) -->
          <div class="text-layer text-main">
            <div class="top">hoist the</div>
            <div class="bottom">colors</div>
          </div>
        </div>

        <div class="title-metadata">
          <span class="name">NOLAN â€¢ FIGUEROA</span>
        </div>
      </div>

      <!-- Navigation categories -->
      <nav class="portfolio-nav">
        <div class="nav-category">Art Direction</div>
        <div class="nav-category">Photography</div>
        <div class="nav-category">Graphics and Layout</div>
        <div class="nav-category">Fashion Design</div>
      </nav>
    </main>

    <StickyFooter />
  </div>
</Layout>

<style>
  .page-wrapper {
    min-height: 100vh;
    background: #e5e5e5;
    padding-left: 100px; /* Space for floating menu */
    display: flex;
    flex-direction: column;
  }

  .portfolio-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
  }

  .blur-title-section {
    margin-bottom: 4rem;
    position: relative;
  }

  .blur-container {
    position: relative;
    width: 600px;
    height: 500px;
    margin: 0 auto;
  }

  .text-layer {
    position: absolute;
    font-family: 'Roboto', sans-serif;
    font-size: clamp(4rem, 8vw, 8rem);
    font-weight: 900;
    color: #333;
    letter-spacing: -0.08em;
    user-select: none;
    text-transform: lowercase;
    line-height: 1.2;
    width: 100%;
  }

  /* Main text split - crisp and bold */
  .text-main {
    z-index: 20;
    font-weight: 900;
  }

  .text-main .top {
    position: absolute;
    top: 0;
    left: 0;
  }

  .text-main .bottom {
    position: absolute;
    top: 110px;
    left: 0;
  }

  /* Heavy blur shadow layers for depth */
  .text-shadow-1 {
    filter: blur(2px);
    opacity: 0.8;
    z-index: 15;
    transform: var(--shadow-transform-1);
  }

  .text-shadow-1 .top {
    position: absolute;
    top: 0;
    left: 0;
  }

  .text-shadow-1 .bottom {
    position: absolute;
    top: 110px;
    left: 0;
  }

  .text-shadow-2 {
    filter: blur(5px);
    opacity: 0.6;
    z-index: 10;
    transform: var(--shadow-transform-2);
  }

  .text-shadow-2 .top {
    position: absolute;
    top: 0;
    left: 0;
  }

  .text-shadow-2 .bottom {
    position: absolute;
    top: 110px;
    left: 0;
  }

  .text-shadow-3 {
    filter: blur(10px);
    opacity: 0.5;
    z-index: 5;
    transform: var(--shadow-transform-3);
  }

  .text-shadow-3 .top {
    position: absolute;
    top: 0;
    left: 0;
  }

  .text-shadow-3 .bottom {
    position: absolute;
    top: 110px;
    left: 0;
  }

  .text-shadow-4 {
    filter: blur(20px);
    opacity: 0.3;
    z-index: 2;
    transform: var(--shadow-transform-4);
  }

  .text-shadow-4 .top {
    position: absolute;
    top: 0;
    left: 0;
  }

  .text-shadow-4 .bottom {
    position: absolute;
    top: 110px;
    left: 0;
  }

  .text-shadow-5 {
    filter: blur(30px);
    opacity: 0.2;
    z-index: 1;
    transform: var(--shadow-transform-5);
  }

  .text-shadow-5 .top {
    position: absolute;
    top: 0;
    left: 0;
  }

  .text-shadow-5 .bottom {
    position: absolute;
    top: 110px;
    left: 0;
  }

  .title-metadata {
    margin-top: 1rem;
  }

  .name {
    font-family: 'Roboto', sans-serif;
    font-size: 0.875rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    color: #666;
    text-transform: uppercase;
  }

  .portfolio-nav {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 300px;
  }

  .nav-category {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: #333;
    cursor: pointer;
    transition: color 0.3s ease;
    padding: 0.5rem 0;
  }

  .nav-category:hover {
    color: #666;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-wrapper {
      padding-left: 0;
    }

    .portfolio-main {
      padding: 1rem;
    }

    .blur-container {
      width: 90vw;
      height: 300px;
    }

    .text-layer {
      font-size: clamp(3rem, 12vw, 5rem);
    }

    .blur-title-section {
      margin-bottom: 3rem;
    }

    .portfolio-nav {
      gap: 1rem;
    }

    .nav-category {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .blur-container {
      width: 95vw;
      height: 250px;
    }

    .text-layer {
      font-size: clamp(2.5rem, 15vw, 4rem);
    }
  }
</style>