---
import Layout from '../layouts/Layout.astro';
import StickyFooter from '../components/StickyFooter.astro';
import { getCollection } from 'astro:content';

// Get all microblog posts, sorted by date (newest first)
const microblogPosts = await getCollection('microblog');
const sortedPosts = microblogPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Nolan Figueroa - Design & Technology">
  <div class="page-wrapper">
    <button id="unredact-toggle" class="unredact-toggle">
      <span class="toggle-text">DECLASSIFY</span>
    </button>
    
    <main class="portfolio-main">
      <div class="message-grid" id="message-grid">
        <p class="document-text">
          <span class="hidden-text">I BELIEVE </span>
          <span class="visible-text">THERE'S </span>
          <span class="visible-text">ALWAYS </span>
          <span class="visible-text">SOMETHING </span>
          <span class="hidden-text">PROFOUND </span>
          <span class="visible-text">TO </span>
          <span class="hidden-text">DISCOVER AND </span>
          <span class="visible-text">LEARN </span>
          <span class="hidden-text">LIVING </span>
          <span class="visible-text">BETWEEN </span>
          <span class="visible-text">THE </span>
          <span class="visible-text">LINES </span>
          <span class="hidden-text">OF EXISTENCE</span>
          <span class="accent-text">.</span>
        </p>
      </div>

    </main>

    <StickyFooter />
  </div>
</Layout>

<style>
  .page-wrapper {
    min-height: 100vh;
    background: #fff;
    margin-left: 88px;
    display: flex;
    flex-direction: column;
  }

  .portfolio-main {
    flex: 1;
    padding: 4rem 3rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .message-grid {
    width: 100%;
    max-width: 900px;
  }

  .document-text {
    margin: 0;
    padding: 0;
  }

  .visible-text,
  .hidden-text {
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.03em;
    display: inline;
    line-height: 1.2;
  }

  .visible-text {
    color: #000;
  }

  .accent-text {
    color: #c6ff00;
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.03em;
    display: inline;
    line-height: 1.2;
  }

  .hidden-text {
    background: #000;
    color: #000;
    cursor: pointer;
    user-select: text;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .hidden-text:hover,
  .hidden-text::selection,
  .hidden-text::-moz-selection {
    background: #000;
    color: #fff;
  }

  .unredacted .hidden-text {
    background: transparent;
    color: #000;
  }

  .unredact-toggle {
    position: fixed;
    top: 2rem;
    right: 2rem;
    background: #000;
    color: #fff;
    border: none;
    padding: 1rem 2rem;
    font-family: 'Roboto Mono', monospace;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    z-index: 1000;
    transition: all 0.3s ease;
  }

  .unredact-toggle:hover {
    background: #333;
  }

  .unredacted .unredact-toggle .toggle-text::before {
    content: "RE";
  }

  @media (max-width: 1200px) {
    .visible-text,
    .hidden-text,
    .accent-text {
      font-size: 4rem;
    }
  }

  @media (max-width: 768px) {
    .page-wrapper {
      margin-left: 72px;
    }

    .portfolio-main {
      padding: 2rem 1.5rem;
    }

    .visible-text,
    .hidden-text,
    .accent-text {
      font-size: 3rem;
    }
  }

  @media (max-width: 480px) {
    .portfolio-main {
      padding: 1.5rem 1rem;
    }

    .visible-text,
    .hidden-text,
    .accent-text {
      font-size: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggleButton = document.getElementById('unredact-toggle');
    const messageGrid = document.getElementById('message-grid');
    
    if (toggleButton && messageGrid) {
      toggleButton.addEventListener('click', function() {
        messageGrid.classList.toggle('unredacted');
      });
    }
  });
</script>