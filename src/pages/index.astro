<script>
  document.addEventListener('DOMContentLoaded', () => {
    let resizeTimeout;
    
    function adjustScrollForFooter() {
      const footer = document.querySelector('footer');
      if (!footer) return;
      
      const footerHeight = footer.offsetHeight;
      const viewportHeight = window.innerHeight;
      const documentHeight = document.documentElement.scrollHeight;
      const currentScroll = window.scrollY;
      
      // Calculate if footer is partially visible
      const maxScroll = documentHeight - viewportHeight;
      const footerStartsAt = documentHeight - footerHeight;
      const footerVisibleArea = Math.max(0, currentScroll + viewportHeight - footerStartsAt);
      
      // If footer is partially visible (not fully revealed), scroll to show it completely
      if (footerVisibleArea > 0 && footerVisibleArea < footerHeight) {
        const targetScroll = Math.min(maxScroll, footerStartsAt);
        
        window.scrollTo({
          top: targetScroll,
          behavior: 'smooth'
        });
      }
    }
    
    // Handle viewport resize
    function handleResize() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        adjustScrollForFooter();
      }, 150); // Debounce resize events
    }
    
    // Handle viewport orientation change
    function handleOrientationChange() {
      setTimeout(() => {
        adjustScrollForFooter();
      }, 300); // Wait for orientation change to complete
    }
    
    // Listen for resize events
    window.addEventListener('resize', handleResize);
    
    // Listen for orientation change (mobile)
    if (screen && screen.orientation) {
      screen.orientation.addEventListener('change', handleOrientationChange);
    } else {
      // Fallback for older browsers
      window.addEventListener('orientationchange', handleOrientationChange);
    }
    
    // Initial check on load
    setTimeout(adjustScrollForFooter, 100);
  });
</script>

