---
import Layout from '../layouts/Layout.astro';
import EyeChart from '../components/EyeChart.astro';
import StickyFooter from '../components/StickyFooter.astro';

// Sample blog posts data
const posts = [
  { title: "Design Systems", slug: "design-systems" },
  { title: "User Research", slug: "user-research" },
  { title: "Interface Design", slug: "interface-design" },
  { title: "Product Strategy", slug: "product-strategy" },
  { title: "Creative Technology", slug: "creative-technology" },
  { title: "Digital Experiences", slug: "digital-experiences" },
  { title: "Brand Identity", slug: "brand-identity" },
  { title: "Motion Design", slug: "motion-design" },
  { title: "Typography", slug: "typography" },
  { title: "Case Studies", slug: "case-studies" },
  { title: "Process", slug: "process" },
  { title: "About", slug: "about" },
];
---

<Layout title="Nolan Figueroa - Design & Technology">
  <!-- Eye chart hidden for blog list -->
  <!-- <EyeChart /> -->
  
  <!-- Blog posts list -->
  <main class="relative h-[100vh] z-10 blog-list-container main-content">
    <!-- Page content indicator -->
    <div class="page-indicator">
      <span class="indicator-text">BLOG</span>
    </div>
    
    <div class="blog-list">
      <div class="blog-section">
        <h2 class="section-title">2024</h2>
        <div class="blog-items">
          <a href="/projects/future-design" class="blog-item">
            <span class="blog-title">FUTURE DESIGN SYSTEMS</span>
          </a>
          <a href="/case-studies/ai-interface" class="blog-item">
            <span class="blog-title">AI INTERFACE STUDY</span>
          </a>
          <a href="/blog/ai-creative-coding" class="blog-item">
            <span class="blog-title">AI AND CREATIVE CODING</span>
          </a>
          <a href="/" class="blog-item">
            <span class="blog-title">VIEW ALL BLOG POSTS</span>
          </a>
        </div>
      </div>
      
      <div class="blog-section">
        <h2 class="section-title">2023</h2>
        <div class="blog-items">
          <a href="/blog/research-methods" class="blog-item">
            <span class="blog-title">DESIGN RESEARCH METHODS</span>
          </a>
          <a href="/projects/ux-patterns" class="blog-item">
            <span class="blog-title">UX PATTERNS PROJECT</span>
          </a>
          <a href="/blog/future-of-web-development" class="blog-item">
            <span class="blog-title">FUTURE OF WEB DEVELOPMENT</span>
          </a>
        </div>
      </div>
      
      <div class="blog-section">
        <h2 class="section-title">2022</h2>
        <div class="blog-items">
          <a href="/" class="blog-item">
            <span class="blog-title">EXPLORE ALL ARTICLES</span>
          </a>
          <a href="/case-studies/ai-interface" class="blog-item">
            <span class="blog-title">CASE STUDIES</span>
          </a>
          <a href="/projects/future-design" class="blog-item">
            <span class="blog-title">PROJECTS & CONCEPTS</span>
          </a>
          <a href="/" class="blog-item">
            <span class="blog-title">LATEST BLOG POSTS</span>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Name display at bottom left -->
    <div class="name-display">
      <div class="name-line">NOLAN</div>
      <div class="name-line">FIGUEROA</div>
    </div>
  </main>
  
  <StickyFooter />
</Layout>

<style>
  body {
    margin: 0;
    padding: 0;
    background: white;
  }
  
  
  .blog-list-container {
    width: 100vw;
    padding: 1rem;
    box-sizing: border-box;
    background: white;
    overflow-y: auto;
    position: relative;
  }
  
  .name-display {
    position: absolute;
    bottom: 2rem;
    left: 2rem;
    font-family: 'League Gothic', sans-serif;
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 400;
    line-height: 0.8;
    color: rgba(0, 0, 0, 0.15);
    text-transform: uppercase;
    pointer-events: none;
    z-index: 1;
  }
  
  .name-line {
    display: block;
  }
  
  .page-indicator {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    width: 100%;
    max-width: 800px;
  }
  
  .indicator-text {
    font-family: 'Evolve Sans', sans-serif;
    font-size: clamp(0.9rem, 1.4vw, 1.1rem);
    font-weight: 600;
    color: #000;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 0.5rem 1rem;
    background-color: #f0f0f0;
    border-left: 3px solid #000;
  }
  
  .blog-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 800px;
    width: 100%;
    margin-top: 1rem;
  }
  
  .blog-section {
    width: 100%;
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }
  
  .section-title {
    font-family: 'Evolve Sans', sans-serif;
    font-size: clamp(0.75rem, 1.2vw, 0.9rem);
    font-weight: 500;
    color: #fff;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin: 0;
    flex-shrink: 0;
    min-width: 140px;
    background-color: #000;
    line-height: 1.3;
    display: block;
  }
  
  .blog-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }
  
  .blog-item {
    text-decoration: none;
    color: inherit;
    display: block;
    position: relative;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .blog-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    transform: scaleY(0);
    transform-origin: center;
    transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: -1;
  }
  
  .blog-item:hover::before {
    transform: scaleY(1);
  }
  
  .blog-item:hover {
    color: #fff;
  }
  
  .blog-item:hover .blog-title {
    color: #fff;
  }
  
  .blog-item::after {
    content: 'â†—';
    position: absolute;
    right: 0.5em;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0;
    transition: opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    color: #fff;
    font-size: 1em;
  }
  
  .blog-item:hover::after {
    opacity: 1;
  }
  
  .blog-title {
    font-family: 'Evolve Sans', sans-serif;
    font-size: clamp(0.75rem, 1.2vw, 0.9rem);
    font-weight: 500;
    color: #000;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    line-height: 1.3;
    display: block;
  }
  
  @media (max-width: 768px) {
    .blog-list-container {
      padding: 1rem;
    }
    
    .page-indicator {
      margin-bottom: 1rem;
    }
    
    .indicator-text {
      font-size: 0.9rem;
      padding: 0.4rem 0.8rem;
    }
    
    .blog-list {
      gap: 1.5rem;
    }
    
    .blog-section {
      flex-direction: column;
      gap: 1rem;
    }
    
    .section-title {
      min-width: auto;
    }
    
    .name-display {
      bottom: 1rem;
      left: 1rem;
      font-size: clamp(2rem, 10vw, 4rem);
    }
  }
  
  .container {
    min-height: 100vh;
    padding: 1rem;
    width: 100%;
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1rem;
    width: 100%;
  }
  
  .grid-block {
    aspect-ratio: 16 / 9;
    background: #2d2d2d;
    border-radius: 8px;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-decoration: none;
    color: white;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
  }
  
  .grid-block:hover {
    background: #1a1a1a;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }
  
  .block-title {
    font-family: 'Evolve Sans', sans-serif;
    font-size: clamp(1.1rem, 2vw, 1.3rem);
    font-weight: 500;
    line-height: 1.3;
    color: white;
  }
  
  .block-arrow {
    position: absolute;
    bottom: 1.5rem;
    left: 1.5rem;
    font-size: 20px;
    color: white;
    opacity: 0;
    transform: translate(-5px, 5px);
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  
  .grid-block:hover .block-arrow {
    opacity: 0.8;
    transform: translate(0, 0);
  }
  
  /* Special styling for certain blocks if needed */
  .grid-block:nth-child(3n) {
    background: #333;
  }
  
  .grid-block:nth-child(3n):hover {
    background: #1a1a1a;
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }
    
    .posts-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1rem;
    }
    
    .grid-block {
      padding: 1rem;
    }
    
    .block-title {
      font-size: 1rem;
    }
    
    .block-arrow {
      bottom: 1rem;
      left: 1rem;
      font-size: 18px;
    }
  }
  
  @media (max-width: 480px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>