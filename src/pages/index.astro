---
import Layout from '../layouts/Layout.astro';
import StickyFooter from '../components/StickyFooter.astro';
import { getCollection } from 'astro:content';

// Get all microblog posts, sorted by date (newest first)
const microblogPosts = await getCollection('microblog');
const sortedPosts = microblogPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Nolan Figueroa - Design & Technology">
  <div class="page-wrapper">
    <main class="portfolio-main">
      <div class="intro-section">
        <div class="title-with-toggle">
          <h1 class="main-title">Nolan Figueroa</h1>
          <button id="redaction-toggle" class="redaction-toggle" aria-label="Toggle redacted view">
            <span class="toggle-icon">üëÅÔ∏è</span>
          </button>
        </div>
        <div class="intro-text redacted-document" id="intro-content">
          <div class="redacted-view">
            <span class="redacted" data-original="Designer">‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà</span> and <span class="redacted-highlight" data-original="technologist">technologist</span> exploring the intersection of <span class="redacted" data-original="human">‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà</span> experience and <span class="redacted-highlight" data-original="digital systems">digital systems</span>.<br>
            Currently focused on <span class="redacted-highlight" data-original="spatial interfaces">spatial interfaces</span>, <span class="redacted" data-original="design systems">‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà</span>, and the future of <span class="redacted-partial" data-original="interactive media">interactive media</span>.
            
            <div class="redacted-stack" style="margin-top: 1.5rem; width: 60%;">
              <div class="redacted-block"></div>
              <div class="redacted-block"></div>
              <div class="redacted-block"></div>
            </div>
          </div>
          
          <div class="normal-view" style="display: none;">
            Designer and technologist exploring the intersection of human experience and digital systems. 
            Currently focused on spatial interfaces, design systems, and the future of interactive media.
          </div>
        </div>
      </div>

      <section class="microblog-section">
        <h2 class="microblog-title" id="notes-title">
          <span class="redacted-view"><span class="redacted" data-original="Recent">‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà</span> Notes</span>
          <span class="normal-view" style="display: none;">Recent Notes</span>
        </h2>
        <div class="microblog-list">
          {sortedPosts.map(async (post) => {
            const { Content } = await post.render();
            return (
              <article class="microblog-entry">
                <div class="entry-header">
                  <h3 class="entry-title">{post.data.title}</h3>
                  <time class="entry-date" datetime={post.data.date.toISOString()}>
                    {post.data.date.toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'short', 
                      day: 'numeric' 
                    })}
                  </time>
                </div>
                <div class="entry-content">
                  <Content />
                </div>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="entry-tags">
                    {post.data.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </article>
            );
          })}
        </div>
      </section>
    </main>

    <StickyFooter />
  </div>
</Layout>

<style>
  .page-wrapper {
    min-height: 100vh;
    background: #e5e5e5;
    margin-left: 80px; /* Space for left nav menu */
    display: flex;
    flex-direction: column;
  }

  .portfolio-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    text-align: left;
    padding: 4rem 2rem 2rem;
    max-width: 800px;
    margin: 0 auto;
    gap: 3rem;
  }

  .intro-section {
    margin-bottom: 2rem;
  }

  .main-title {
    font-family: 'Roboto', sans-serif;
    font-size: 3rem;
    font-weight: 900;
    color: #333;
    margin: 0 0 1rem 0;
    letter-spacing: -0.02em;
  }

  .intro-text {
    font-family: 'Roboto', sans-serif;
    font-size: 1.1rem;
    font-weight: 400;
    color: #666;
    line-height: 1.6;
    margin: 0;
    max-width: 600px;
  }
  
  .redacted-document {
    font-family: 'Roboto Mono', monospace;
    font-size: 1rem;
    line-height: 1.8;
    color: #333;
    background: #f8f8f8;
    padding: 2rem;
    border: 1px solid #ddd;
    position: relative;
  }
  
  .redacted-document::before {
    content: "CLASSIFIED DOCUMENT";
    position: absolute;
    top: 0.5rem;
    right: 1rem;
    font-size: 0.7rem;
    font-weight: bold;
    color: #ff4444;
    letter-spacing: 0.1em;
  }

  .microblog-section {
    width: 100%;
  }

  .microblog-title {
    font-family: 'Roboto', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #333;
    margin: 0 0 2rem 0;
    letter-spacing: -0.01em;
  }

  .microblog-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .microblog-entry {
    border-bottom: 1px solid #ddd;
    padding-bottom: 2rem;
  }

  .microblog-entry:last-child {
    border-bottom: none;
  }

  .entry-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  .entry-title {
    font-family: 'Roboto', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #333;
    margin: 0;
    flex: 1;
  }

  .entry-date {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.875rem;
    color: #888;
    white-space: nowrap;
  }

  .entry-content {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    color: #555;
    margin-bottom: 1rem;
  }

  .entry-content :global(p) {
    margin: 0 0 1rem 0;
  }

  .entry-content :global(p:last-child) {
    margin: 0;
  }

  .entry-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-family: 'Roboto Mono', monospace;
    font-size: 0.75rem;
    font-weight: 500;
    color: #666;
    background: #f5f5f5;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-wrapper {
      margin-left: 0;
    }

    .portfolio-main {
      padding: 2rem 1rem 1rem;
      margin-left: 64px;
      gap: 2rem;
    }

    .main-title {
      font-size: 2.5rem;
    }

    .intro-text {
      font-size: 1rem;
    }

    .entry-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .entry-date {
      order: -1;
    }
  }

  @media (max-width: 480px) {
    .portfolio-main {
      padding: 1.5rem 0.75rem 0.75rem;
      margin-left: 64px;
      gap: 1.5rem;
    }

    .main-title {
      font-size: 2rem;
    }

    .microblog-list {
      gap: 2rem;
    }
  }

  @media (max-width: 320px) {
    .portfolio-main {
      padding: 1rem 0.5rem 0.5rem;
      margin-left: 64px;
    }

    .main-title {
      font-size: 1.75rem;
    }
  }
  
  /* Toggle button styling */
  .title-with-toggle {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .redaction-toggle {
    background: #333;
    border: 2px solid #666;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.2rem;
  }
  
  .redaction-toggle:hover {
    background: #555;
    border-color: #888;
    transform: scale(1.05);
  }
  
  .redaction-toggle.active {
    background: #ff4444;
    border-color: #ff6666;
  }
  
  .redaction-toggle.active .toggle-icon {
    filter: grayscale(100%);
  }
  
  .redaction-toggle.active .toggle-icon::after {
    content: "üîç";
    position: absolute;
  }
  
  /* View transitions */
  .redacted-view, .normal-view {
    transition: opacity 0.4s ease, transform 0.4s ease;
  }
  
  .normal-view {
    font-family: 'Roboto', sans-serif;
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
    background: transparent;
    border: none;
    padding: 0;
  }
  
  .normal-view.active {
    display: block;
  }
</style>

<script>
  function initRedactionToggle() {
    const toggle = document.getElementById('redaction-toggle');
    const introContent = document.getElementById('intro-content');
    
    if (!toggle || !introContent) {
      console.log('Toggle elements not found');
      return;
    }
    
    // Start in redacted mode by default
    let isRedacted = localStorage.getItem('redacted-mode') === null ? true : localStorage.getItem('redacted-mode') === 'true';
    
    function updateView(showRedacted) {
      console.log('Updating view to:', showRedacted ? 'redacted' : 'normal');
      
      const redactedViews = document.querySelectorAll('.redacted-view');
      const normalViews = document.querySelectorAll('.normal-view');
      
      if (showRedacted) {
        // Show redacted view
        redactedViews.forEach(view => view.style.display = 'block');
        normalViews.forEach(view => view.style.display = 'none');
        introContent.classList.add('redacted-document');
        toggle.classList.remove('active');
      } else {
        // Show normal view
        redactedViews.forEach(view => view.style.display = 'none');
        normalViews.forEach(view => view.style.display = 'block');
        introContent.classList.remove('redacted-document');
        toggle.classList.add('active');
      }
      
      // Save preference
      localStorage.setItem('redacted-mode', showRedacted.toString());
      isRedacted = showRedacted;
    }
    
    // Set initial state
    updateView(isRedacted);
    
    // Toggle functionality
    toggle.addEventListener('click', function(e) {
      e.preventDefault();
      console.log('Toggle clicked, current state:', isRedacted);
      updateView(!isRedacted);
    });
  }
  
  // Try multiple ways to ensure the script runs
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initRedactionToggle);
  } else {
    initRedactionToggle();
  }
  
  // Also try after Astro's client-side routing
  document.addEventListener('astro:page-load', initRedactionToggle);
</script>