---
import Layout from './Layout.astro';
import StickyFooter from '../components/StickyFooter.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags: string[];
  author: string;
}

const { title, description, pubDate, updatedDate, heroImage, tags, author } = Astro.props;
---

<Layout title={title} description={description}>
  <div class="page-wrapper">
    <div class="container">
      <article class="blog-article">
        <header class="article-header">
          <nav class="breadcrumb">
            <a href="/" class="breadcrumb-link">Home</a>
            <span class="breadcrumb-separator">→</span>
            <a href="/blog" class="breadcrumb-link">Blog</a>
            <span class="breadcrumb-separator">→</span>
            <span class="breadcrumb-current">Article</span>
          </nav>

          <div class="article-meta">
            <div class="meta-card">
              <span class="article-type">Article</span>
              <time class="article-date">
                {pubDate.toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </time>
            </div>
          </div>

          <h1 class="article-title">{title}</h1>
          <p class="article-description">{description}</p>

          {updatedDate && (
            <p class="updated-date">
              Updated: {updatedDate.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </p>
          )}
        </header>

        <div class="article-content">
          {heroImage && (
            <div class="hero-image-container">
              <img src={heroImage} alt={title} class="hero-image" />
            </div>
          )}
          
          <div class="content-wrapper">
            <slot />
          </div>
        </div>

        <footer class="article-footer">
          <div class="article-tags">
            <h3>Tags</h3>
            <div class="tags-list">
              {tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
          
          <div class="author-card">
            <div class="author-avatar">
              <span>{author.charAt(0).toUpperCase()}</span>
            </div>
            <div class="author-info">
              <h4>Written by {author}</h4>
              <p>Design & Technology Professional</p>
            </div>
          </div>

          <div class="navigation-links">
            <a href="/blog" class="nav-button">← All Articles</a>
            <a href="/" class="nav-button">Home →</a>
          </div>
        </footer>
      </article>
    </div>

    <StickyFooter />
  </div>
</Layout>

<style>
  .page-wrapper {
    min-height: 100vh;
    background: var(--bg-sage);
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1.5rem;
  }

  .blog-article {
    background: var(--bg-white);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  /* Header */
  .article-header {
    padding: 2rem;
    border-bottom: 1px solid var(--bg-off-white);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-size: 0.875rem;
  }

  .breadcrumb-link {
    color: #666;
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb-link:hover {
    color: var(--text-black);
  }

  .breadcrumb-separator {
    color: #999;
  }

  .breadcrumb-current {
    color: var(--text-black);
    font-weight: 500;
  }

  .article-meta {
    margin-bottom: 2rem;
  }

  .meta-card {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1.5rem;
    background: var(--bg-off-white);
    border-radius: var(--border-radius-sm);
  }

  .article-type {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-black);
  }

  .article-date {
    font-size: 0.875rem;
    color: #666;
  }

  .article-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 1.5rem;
    color: var(--text-black);
  }

  .article-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #666;
    margin: 0 0 1rem;
  }

  .updated-date {
    font-size: 0.875rem;
    color: #888;
    font-style: italic;
    margin: 0;
    padding: 0.5rem 1rem;
    background: rgba(236, 249, 90, 0.1);
    border-radius: var(--border-radius-sm);
    display: inline-block;
  }

  /* Hero Image */
  .hero-image-container {
    padding: 0 3rem;
    margin-bottom: 2rem;
  }

  .hero-image {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius-sm);
    box-shadow: var(--shadow-md);
  }

  /* Content */
  .content-wrapper {
    padding: 0 3rem 2rem;
    line-height: 1.7;
    font-size: 1.125rem;
  }

  /* Content Styles */
  .content-wrapper :global(h2) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.75rem;
    font-weight: 700;
    margin: 3rem 0 1rem;
    color: var(--text-black);
  }

  .content-wrapper :global(h3) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem;
    color: var(--text-black);
  }

  .content-wrapper :global(h4) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.25rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem;
    color: var(--text-black);
  }

  .content-wrapper :global(p) {
    margin: 1.5rem 0;
    color: #444;
  }

  .content-wrapper :global(img) {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius-sm);
    box-shadow: var(--shadow-md);
    margin: 2rem 0;
  }

  .content-wrapper :global(blockquote) {
    margin: 2rem 0;
    padding: 1.5rem;
    background: var(--accent-lime);
    border-radius: var(--border-radius-sm);
    border-left: 4px solid var(--text-black);
    font-style: italic;
  }

  .content-wrapper :global(blockquote p) {
    margin: 0.5rem 0;
    color: var(--text-black);
  }

  .content-wrapper :global(pre) {
    background: var(--text-black);
    color: var(--bg-white);
    padding: 1.5rem;
    border-radius: var(--border-radius-sm);
    margin: 2rem 0;
    overflow-x: auto;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
  }

  .content-wrapper :global(code) {
    background: var(--bg-off-white);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
  }

  .content-wrapper :global(pre code) {
    background: transparent;
    padding: 0;
    color: var(--bg-white);
  }

  .content-wrapper :global(ul),
  .content-wrapper :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .content-wrapper :global(li) {
    margin: 0.75rem 0;
  }

  .content-wrapper :global(strong) {
    font-weight: 600;
    color: var(--text-black);
  }

  .content-wrapper :global(a) {
    color: var(--text-black);
    text-decoration: underline;
    text-decoration-color: var(--accent-lime);
    text-decoration-thickness: 2px;
    text-underline-offset: 2px;
    transition: all 0.3s;
  }

  .content-wrapper :global(a:hover) {
    background: var(--accent-lime);
    text-decoration: none;
    padding: 0.1em 0.3em;
    border-radius: 4px;
  }

  /* Footer */
  .article-footer {
    padding: 2rem 3rem 3rem;
    border-top: 1px solid var(--bg-off-white);
    background: var(--bg-off-white);
  }

  .article-tags {
    margin-bottom: 2rem;
  }

  .article-tags h3 {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 1rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tag {
    padding: 0.5rem 1rem;
    background: var(--bg-white);
    border-radius: var(--border-radius-sm);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-black);
    box-shadow: var(--shadow-sm);
  }

  .author-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--bg-white);
    border-radius: var(--border-radius-sm);
    box-shadow: var(--shadow-sm);
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    background: var(--accent-lime);
    border-radius: var(--border-radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'JetBrains Mono', monospace;
    font-weight: 900;
    font-size: 1.25rem;
    color: var(--text-black);
  }

  .author-info h4 {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.25rem;
  }

  .author-info p {
    margin: 0;
    font-size: 0.875rem;
    color: #666;
  }

  .navigation-links {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }

  .nav-button {
    padding: 0.75rem 1.5rem;
    background: var(--text-black);
    color: var(--bg-white);
    text-decoration: none;
    border-radius: var(--border-radius-sm);
    font-weight: 500;
    transition: all 0.3s;
  }

  .nav-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    .article-header,
    .hero-image-container,
    .content-wrapper,
    .article-footer {
      padding-left: 2rem;
      padding-right: 2rem;
    }

    .article-header {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .content-wrapper {
      padding-bottom: 1rem;
    }

    .article-footer {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .navigation-links {
      flex-direction: column;
    }

    .nav-button {
      text-align: center;
    }

    .author-card {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .article-header,
    .hero-image-container,
    .content-wrapper,
    .article-footer {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .breadcrumb {
      flex-wrap: wrap;
    }
  }
</style>