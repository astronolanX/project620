---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags: string[];
  author: string;
}

const { title, description, pubDate, updatedDate, heroImage, tags, author } = Astro.props;
---

<Layout title={title}>
  <article class="blog-post main-content">
    <header class="post-header">
      <div class="post-meta">
        <a href="/" class="back-link">‚Üê Back to Home</a>
        <time class="post-date">{pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
      </div>
      <h1>{title}</h1>
      <p class="post-subtitle">{description}</p>
      {updatedDate && (
        <p class="updated-date">
          Updated: {updatedDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </p>
      )}
    </header>

    <div class="post-content">
      {heroImage && (
        <div class="hero-image">
          <img src={heroImage} alt={title} />
        </div>
      )}
      
      <slot />
      
      <div class="post-footer">
        <div class="tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
        
        <div class="author-info">
          <p>By {author}</p>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .main-content {
    position: relative;
    z-index: 10;
    min-height: 100vh;
    background: white;
  }
  
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .back-link {
    color: #666;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    font-family: 'Evolve Sans', sans-serif;
  }

  .back-link:hover {
    color: black;
  }

  .post-date {
    color: #888;
    font-size: 0.9rem;
    font-family: 'Evolve Sans', sans-serif;
  }

  .post-header h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    margin-bottom: 1rem;
    color: black;
    line-height: 1.2;
    font-family: 'Neue Haas Grotesk', sans-serif;
    text-shadow: 
      -0.08em 0 #ff3333,
      0.08em 0 #33ccff,
      -0.12em 0 rgba(255, 51, 51, 0.8),
      0.12em 0 rgba(51, 204, 255, 0.8);
  }

  .post-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.4rem);
    color: #666;
    line-height: 1.6;
    margin: 0;
    font-family: 'Evolve Sans', sans-serif;
  }

  .updated-date {
    font-size: 0.85rem;
    color: #888;
    font-style: italic;
    margin-top: 0.5rem;
    font-family: 'Evolve Sans', sans-serif;
  }

  .post-content {
    line-height: 1.8;
    font-size: clamp(1rem, 2vw, 1.1rem);
    font-family: 'Evolve Sans', sans-serif;
  }

  .hero-image {
    margin: clamp(2rem, 5vw, 3rem) 0;
    text-align: center;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  /* Style markdown content */
  .post-content :global(h2) {
    font-size: clamp(1.8rem, 4vw, 2.2rem);
    font-weight: 700;
    margin: clamp(3rem, 6vw, 4rem) 0 1.5rem 0;
    color: black;
    font-family: 'Neue Haas Grotesk', sans-serif;
  }

  .post-content :global(h3) {
    font-size: clamp(1.4rem, 3vw, 1.8rem);
    font-weight: 600;
    margin: 2.5rem 0 1rem 0;
    color: #333;
    font-family: 'Neue Haas Grotesk', sans-serif;
  }

  .post-content :global(h4) {
    font-size: clamp(1.2rem, 2.5vw, 1.4rem);
    font-weight: 600;
    margin: 2rem 0 0.75rem 0;
    color: #333;
    font-family: 'Neue Haas Grotesk', sans-serif;
  }

  .post-content :global(p) {
    margin: 1.5rem 0;
    color: #444;
  }

  .post-content :global(img) {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    margin: 2rem 0 1rem 0;
  }

  .post-content :global(em) {
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
    display: block;
    text-align: center;
    margin-top: 0.5rem;
  }

  .post-content :global(blockquote) {
    margin: 2rem 0;
    padding: 1.5rem 2rem;
    border-left: 4px solid #3366FF;
    background: rgba(51, 102, 255, 0.05);
    font-style: italic;
    border-radius: 0 8px 8px 0;
  }

  .post-content :global(blockquote p) {
    margin: 0.5rem 0;
  }

  .post-content :global(pre) {
    background: #1e1e1e;
    color: #d4d4d4;
    padding: 1.5rem;
    border-radius: 8px;
    margin: 2rem 0;
    overflow-x: auto;
    font-family: 'Consolas', 'Monaco', monospace;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .post-content :global(code) {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: 'Consolas', 'Monaco', monospace;
    font-size: 0.9em;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .post-content :global(ul), .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin: 0.5rem 0;
  }

  .post-content :global(strong) {
    font-weight: 600;
    color: #333;
  }

  .post-footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    padding: 0.3rem 0.8rem;
    background: rgba(0, 0, 0, 0.05);
    border-radius: 20px;
    font-size: 0.85rem;
    color: #666;
    font-weight: 500;
    font-family: 'Evolve Sans', sans-serif;
  }

  .author-info {
    color: #666;
    font-size: 0.9rem;
    font-family: 'Evolve Sans', sans-serif;
  }

  .author-info p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .blog-post {
      padding: 1rem;
    }
  }
</style>