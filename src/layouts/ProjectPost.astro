---
import Layout from './Layout.astro';
import StickyFooter from '../components/StickyFooter.astro';

export interface Props {
  title: string;
  description: string;
  year: number;
  type: string;
  heroImage?: string;
  tags: string[];
  featured: boolean;
}

const { title, description, year, type, heroImage, tags, featured } = Astro.props;
---

<Layout title={title} description={description}>
  <div class="page-wrapper">
    <div class="container">
      <article class="project-article">
        <header class="project-header">
          <nav class="breadcrumb">
            <a href="/" class="breadcrumb-link">Home</a>
            <span class="breadcrumb-separator">→</span>
            <a href="/projects" class="breadcrumb-link">Projects</a>
            <span class="breadcrumb-separator">→</span>
            <span class="breadcrumb-current">Project</span>
          </nav>

          <div class="project-meta">
            <div class="meta-cards">
              <div class="meta-card">
                <span class="meta-label">Project Type</span>
                <span class="meta-value">{type}</span>
              </div>
              <div class="meta-card">
                <span class="meta-label">Year</span>
                <span class="meta-value">{year}</span>
              </div>
              {featured && (
                <div class="meta-card featured">
                  <span class="meta-label">Status</span>
                  <span class="meta-value">Featured</span>
                </div>
              )}
            </div>
          </div>

          <h1 class="project-title">{title}</h1>
          <p class="project-description">{description}</p>
        </header>

        <div class="project-content">
          {heroImage && (
            <div class="hero-image-container">
              <img src={heroImage} alt={title} class="hero-image" />
            </div>
          )}
          
          <div class="content-wrapper">
            <slot />
          </div>
        </div>

        <footer class="project-footer">
          <div class="project-tags">
            <h3>Technologies & Skills</h3>
            <div class="tags-list">
              {tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>

          <div class="project-navigation">
            <a href="/projects" class="nav-button">← All Projects</a>
            <a href="/" class="nav-button">Home →</a>
          </div>
        </footer>
      </article>
    </div>

    <StickyFooter />
  </div>
</Layout>

<style>
  .page-wrapper {
    min-height: 100vh;
    background: var(--bg-sage);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 1.5rem;
  }

  .project-article {
    background: var(--bg-white);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  /* Header */
  .project-header {
    padding: 2rem;
    border-bottom: 1px solid var(--bg-off-white);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-size: 0.875rem;
  }

  .breadcrumb-link {
    color: #666;
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb-link:hover {
    color: var(--text-black);
  }

  .breadcrumb-separator {
    color: #999;
  }

  .breadcrumb-current {
    color: var(--text-black);
    font-weight: 500;
  }

  .project-meta {
    margin-bottom: 2rem;
  }

  .meta-cards {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .meta-card {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 1rem;
    background: var(--bg-off-white);
    border-radius: var(--border-radius-sm);
    min-width: 120px;
  }

  .meta-card.featured {
    background: var(--accent-lime);
  }

  .meta-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #666;
  }

  .meta-card.featured .meta-label {
    color: var(--text-black);
  }

  .meta-value {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    font-weight: 700;
    color: var(--text-black);
  }

  .project-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 1.5rem;
    color: var(--text-black);
  }

  .project-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #666;
    margin: 0;
  }

  /* Hero Image */
  .hero-image-container {
    padding: 0 3rem;
    margin-bottom: 2rem;
  }

  .hero-image {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius-sm);
    box-shadow: var(--shadow-md);
  }

  /* Content */
  .content-wrapper {
    padding: 0 3rem 2rem;
    line-height: 1.7;
    font-size: 1.125rem;
  }

  /* Content Styles */
  .content-wrapper :global(h2) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.75rem;
    font-weight: 700;
    margin: 3rem 0 1rem;
    color: var(--text-black);
  }

  .content-wrapper :global(h3) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem;
    color: var(--text-black);
  }

  .content-wrapper :global(h4) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.25rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem;
    color: var(--text-black);
  }

  .content-wrapper :global(p) {
    margin: 1.5rem 0;
    color: #444;
  }

  .content-wrapper :global(img) {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius-sm);
    box-shadow: var(--shadow-md);
    margin: 2rem 0;
  }

  .content-wrapper :global(blockquote) {
    margin: 2rem 0;
    padding: 1.5rem;
    background: var(--accent-lime);
    border-radius: var(--border-radius-sm);
    border-left: 4px solid var(--text-black);
    font-style: italic;
  }

  .content-wrapper :global(blockquote p) {
    margin: 0.5rem 0;
    color: var(--text-black);
  }

  .content-wrapper :global(pre) {
    background: var(--text-black);
    color: var(--bg-white);
    padding: 1.5rem;
    border-radius: var(--border-radius-sm);
    margin: 2rem 0;
    overflow-x: auto;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
  }

  .content-wrapper :global(code) {
    background: var(--bg-off-white);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
  }

  .content-wrapper :global(pre code) {
    background: transparent;
    padding: 0;
    color: var(--bg-white);
  }

  .content-wrapper :global(ul),
  .content-wrapper :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .content-wrapper :global(li) {
    margin: 0.75rem 0;
  }

  .content-wrapper :global(strong) {
    font-weight: 600;
    color: var(--text-black);
  }

  .content-wrapper :global(a) {
    color: var(--text-black);
    text-decoration: underline;
    text-decoration-color: var(--accent-lime);
    text-decoration-thickness: 2px;
    text-underline-offset: 2px;
    transition: all 0.3s;
  }

  .content-wrapper :global(a:hover) {
    background: var(--accent-lime);
    text-decoration: none;
    padding: 0.1em 0.3em;
    border-radius: 4px;
  }

  /* Footer */
  .project-footer {
    padding: 2rem 3rem 3rem;
    border-top: 1px solid var(--bg-off-white);
    background: var(--bg-off-white);
  }

  .project-tags {
    margin-bottom: 2rem;
  }

  .project-tags h3 {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 1rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tag {
    padding: 0.5rem 1rem;
    background: var(--bg-white);
    border-radius: var(--border-radius-sm);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-black);
    box-shadow: var(--shadow-sm);
  }

  .project-navigation {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }

  .nav-button {
    padding: 0.75rem 1.5rem;
    background: var(--text-black);
    color: var(--bg-white);
    text-decoration: none;
    border-radius: var(--border-radius-sm);
    font-weight: 500;
    transition: all 0.3s;
  }

  .nav-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    .project-header,
    .hero-image-container,
    .content-wrapper,
    .project-footer {
      padding-left: 2rem;
      padding-right: 2rem;
    }

    .project-header {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .content-wrapper {
      padding-bottom: 1rem;
    }

    .project-footer {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .meta-cards {
      justify-content: center;
    }

    .meta-card {
      min-width: auto;
      flex: 1;
      text-align: center;
    }

    .project-navigation {
      flex-direction: column;
    }

    .nav-button {
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .project-header,
    .hero-image-container,
    .content-wrapper,
    .project-footer {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .meta-cards {
      flex-direction: column;
    }

    .meta-card {
      min-width: auto;
    }

    .breadcrumb {
      flex-wrap: wrap;
    }
  }
</style>