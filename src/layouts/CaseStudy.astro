---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  subtitle: string;
  client: string;
  timeline: string;
  role: string;
  team: string;
  year: number;
  heroImage?: string;
  tags: string[];
}

const { title, subtitle, client, timeline, role, team, year, heroImage, tags } = Astro.props;
---

<Layout title={title}>
  <article class="case-study main-content">
    <header class="study-header">
      <div class="study-meta">
        <a href="/" class="back-link">‚Üê Back to Portfolio</a>
        <div class="study-details">
          <span class="study-year">{year}</span>
          <span class="study-type">Case Study</span>
        </div>
      </div>
      <h1>{title}</h1>
      <p class="study-subtitle">{subtitle}</p>
    </header>

    <div class="study-content">
      <div class="study-summary">
        <div class="summary-grid">
          <div class="summary-item">
            <h3>Client</h3>
            <p>{client}</p>
          </div>
          <div class="summary-item">
            <h3>Timeline</h3>
            <p>{timeline}</p>
          </div>
          <div class="summary-item">
            <h3>Role</h3>
            <p>{role}</p>
          </div>
          <div class="summary-item">
            <h3>Team</h3>
            <p>{team}</p>
          </div>
        </div>
      </div>

      {heroImage && (
        <div class="hero-media">
          <img src={heroImage} alt={title} />
        </div>
      )}
      
      <slot />
      
      <div class="study-footer">
        <div class="study-tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .main-content {
    position: relative;
    z-index: 10;
    min-height: 100vh;
    background: white;
  }
  
  .case-study {
    max-width: 900px;
    margin: 0 auto;
    padding: 1rem;
  }

  .study-header {
    margin-bottom: 2rem;
  }

  .study-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .back-link {
    color: #666;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    font-family: 'Evolve Sans', sans-serif;
  }

  .back-link:hover {
    color: black;
  }

  .study-details {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .study-year,
  .study-type {
    color: #888;
    font-size: 0.9rem;
    padding: 0.3rem 0.8rem;
    background: rgba(0, 0, 0, 0.05);
    
    font-family: 'Evolve Sans', sans-serif;
  }

  .study-header h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    margin-bottom: 1rem;
    color: black;
    line-height: 1.2;
    font-family: 'Neue Haas Grotesk', sans-serif;
    text-shadow: 
      -0.08em 0 #ff3333,
      0.08em 0 #33ccff,
      -0.12em 0 rgba(255, 51, 51, 0.8),
      0.12em 0 rgba(51, 204, 255, 0.8);
  }

  .study-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.4rem);
    color: #666;
    line-height: 1.6;
    margin: 0;
    font-family: 'Evolve Sans', sans-serif;
  }

  .study-content {
    line-height: 1.8;
    font-size: clamp(1rem, 2vw, 1.1rem);
    font-family: 'Evolve Sans', sans-serif;
  }

  .study-summary {
    margin: 1rem 0;
  }

  .summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.02);
    
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .summary-item h3 {
    margin: 0 0 0.5rem 0;
    font-size: 0.9rem;
    font-weight: 600;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: 'Evolve Sans', sans-serif;
  }

  .summary-item p {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    font-family: 'Evolve Sans', sans-serif;
  }

  .hero-media {
    margin: clamp(2rem, 5vw, 3rem) 0;
    text-align: center;
  }

  .hero-media img {
    width: 100%;
    height: auto;
    
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  /* Style markdown content */
  .study-content :global(h2) {
    font-size: clamp(1.8rem, 4vw, 2.2rem);
    font-weight: 700;
    margin: clamp(3rem, 6vw, 4rem) 0 1.5rem 0;
    color: black;
    font-family: 'Neue Haas Grotesk', sans-serif;
  }

  .study-content :global(h3) {
    font-size: clamp(1.4rem, 3vw, 1.8rem);
    font-weight: 600;
    margin: 2.5rem 0 1rem 0;
    color: #333;
    font-family: 'Neue Haas Grotesk', sans-serif;
  }

  .study-content :global(h4) {
    font-size: clamp(1.2rem, 2.5vw, 1.4rem);
    font-weight: 600;
    margin: 2rem 0 0.75rem 0;
    color: #333;
    font-family: 'Neue Haas Grotesk', sans-serif;
  }

  .study-content :global(p) {
    margin: 1.5rem 0;
    color: #444;
  }

  .study-content :global(img) {
    width: 100%;
    height: auto;
    
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    margin: 2rem 0 1rem 0;
  }

  .study-content :global(em) {
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
    display: block;
    text-align: center;
    margin-top: 0.5rem;
  }

  .study-content :global(ul), .study-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .study-content :global(li) {
    margin: 0.5rem 0;
  }

  .study-content :global(strong) {
    font-weight: 600;
    color: #333;
  }

  .study-content :global(blockquote) {
    margin: 2rem 0;
    padding: 1.5rem 2rem;
    border-left: 4px solid #3366FF;
    background: rgba(51, 102, 255, 0.05);
    font-style: italic;
    
  }

  .study-content :global(blockquote p) {
    margin: 0.5rem 0;
  }

  .study-content :global(pre) {
    background: #1e1e1e;
    color: #d4d4d4;
    padding: 1.5rem;
    
    margin: 2rem 0;
    overflow-x: auto;
    font-family: 'Consolas', 'Monaco', monospace;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .study-content :global(code) {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    
    font-family: 'Consolas', 'Monaco', monospace;
    font-size: 0.9em;
  }

  .study-content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .study-footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .study-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.3rem 0.8rem;
    background: rgba(0, 0, 0, 0.05);
    
    font-size: 0.85rem;
    color: #666;
    font-weight: 500;
    font-family: 'Evolve Sans', sans-serif;
  }

  @media (max-width: 768px) {
    .study-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .study-details {
      align-self: flex-end;
    }

    .summary-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .case-study {
      padding: 1rem;
    }
  }
</style>